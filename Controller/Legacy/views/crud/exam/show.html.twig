{% extends "@IServCrud/show.html.twig" %}

{% block content %}
<h2>Prüfung: {{ item.examName }}</h2>

<ul>
    <li><strong>ID:</strong> {{ item.id }}</li>
    <li><strong>Datum:</strong> {{ item.examDate ? item.examDate|date('d.m.Y') : '-' }}</li>
    <li><strong>Jahr:</strong> {{ item.examYear }}</li>
    <li><strong>Erstellt:</strong> {{ item.createdAt|date('d.m.Y H:i') }}</li>
    <li><strong>Geändert:</strong> {{ item.updatedAt|date('d.m.Y H:i') }}</li>
</ul>

<a href="{{ path('sportabzeichen_exam_participants', {id: item.id}) }}"
   class="btn btn-primary mt-3">
    Teilnehmer anzeigen
</a>

{% endblock %}
