{% extends '@IServCore/page.html.twig' %}

{% block page_title %}{{ _('Benutzer nacherfassen') }}{% endblock %}

{% block content %}
    {% include '@PulsRSportabzeichen/admin/_tabs.html.twig' with {'activeTab': 'participants_manage'} %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ _('IServ-Benutzer hinzufügen') }}</h3>
        </div>

        <div class="panel-body">
            
            <form method="get" action="{{ path('sportabzeichen_admin_participants_missing') }}" class="mb-3">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" 
                           placeholder="{{ _('Nach Name suchen (mind. 3 Zeichen)...') }}" 
                           value="{{ searchTerm }}">
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">{{ icon('search') }} {{ _('Suchen') }}</button>
                    </span>
                </div>
            </form>

            <hr>

            {% if missingUsers is empty %}
                {% if searchTerm %}
                    <div class="alert alert-info">{{ _('Keine passenden Benutzer gefunden (oder sie sind bereits Teilnehmer).') }}</div>
                {% else %}
                    <div class="alert alert-info">
                        {{ icon('info-circle') }} {{ _('Bitte geben Sie einen Namen ein, um Benutzer zu suchen.') }}
                    </div>
                {% endif %}
            {% else %}
                
                {% if limitReached %}
                    <div class="alert alert-warning">
                        {{ _('Suche auf 50 Treffer begrenzt. Bitte präziser suchen.') }}
                    </div>
                {% endif %}

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Account</th>
                            <th>Name</th>
                            <th class="text-end">Aktion</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in missingUsers %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.lastname }}, {{ user.firstname }}</td>
                            <td class="text-end">
                                <a href="{{ path('sportabzeichen_admin_participants_add', {username: user.username}) }}" 
                                   class="btn btn-success btn-xs">
                                    {{ icon('plus') }} {{ _('Hinzufügen') }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}