{% extends '@IServCore/page.html.twig' %}

{% block page_title %}{{ _('Teilnehmerverwaltung') }}{% endblock %}

{% block content %}
    {% include '@PulsRSportabzeichen/admin/_tabs.html.twig' with {'activeTab': 'participants_manage'} %}

    <div class="panel panel-default">
        <div class="panel-heading d-flex justify-content-between align-items-center">
            <h3 class="panel-title">{{ _('Registrierte Teilnehmer') }}</h3>
            <a href="{{ path('sportabzeichen_admin_participants_missing') }}" class="btn btn-primary btn-sm">
                {{ icon('plus') }} {{ _('Nacherfassen') }}
            </a>
        </div>

        <div class="panel-body">
            
            {# --- JS SUCHFELD --- #}
            <div class="input-group mb-3">
                <span class="input-group-addon">{{ icon('search') }}</span>
                <input type="text" id="searchTable" class="form-control" placeholder="{{ _('In der angezeigten Liste filtern...') }}">
            </div>
            
            {% if limit_reached %}
                <div class="alert alert-warning mt-2">
                    {{ icon('exclamation-triangle') }} Liste begrenzt. Bitte Suchfeld nutzen.
                </div>
            {% endif %}

            <div class="table-responsive mt-3">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Klasse</th>
                            <th>Geburtsdatum</th>
                            <th>Geschlecht</th>
                            <th class="text-end">Aktion</th>
                        </tr>
                    </thead>
                    {# --- WICHTIG: ID FÜR JS --- #}
                    <tbody id="participantRows">
                    {% for p in participants %}
                        <tr>
                            <td class="fw-bold">{{ p.nachname }}, {{ p.vorname }}</td>
                            <td>{{ p.klasse|default('-') }}</td>
                            <td>{{ p.geburtsdatum ? p.geburtsdatum|date('d.m.Y') : '-' }}</td>
                            <td>{{ p.geschlecht }}</td>
                            <td class="text-end">
                                <button type="button" class="btn btn-default btn-sm" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#editModal{{ p.id }}">
                                    {{ icon('pencil') }}
                                </button>
                            </td>
                        </tr>
                        {# Modal Code hier (gekürzt für Übersicht) #}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{# --- JAVASCRIPT EINBINDEN --- #}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admin_participants.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}