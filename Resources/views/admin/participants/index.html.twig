{% extends '@IServCore/page.html.twig' %}

{% block page_title %}{{ _('Teilnehmerverwaltung') }}{% endblock %}

{% block content %}
    {% include '@PulsRSportabzeichen/admin/_tabs.html.twig' with {'activeTab': 'participants_manage'} %}

    <div class="panel panel-default">
        <div class="panel-heading d-flex justify-content-between align-items-center">
            <h3 class="panel-title">
                {{ _('Registrierte Teilnehmer') }}
                <span class="badge">{{ totalCount }}</span>
            </h3>
            <div class="btn-group pull-right">
                <a href="{{ path('sportabzeichen_admin_participants_missing') }}" class="btn btn-primary btn-sm">
                    {{ icon('plus') }} {{ _('Nacherfassen') }}
                </a>
                <a href="{{ path('sportabzeichen_admin_upload_participants') }}" class="btn btn-default btn-sm">
                    {{ icon('upload') }} {{ _('CSV Import') }}
                </a>
            </div>
        </div>

        <div class="panel-body">
            
            {# JS Suchfeld #}
            <div class="input-group mb-3">
                <span class="input-group-addon">{{ icon('search') }}</span>
                <input type="text" id="searchTable" class="form-control" placeholder="{{ _('Auf dieser Seite filtern (Name, Klasse)...') }}">
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>{{ _('Name') }}</th>
                            <th>{{ _('Gruppen / Klasse') }}</th>
                            <th>{{ _('Geburtstag') }}</th>
                            <th>{{ _('Geschlecht') }}</th>
                            <th class="text-end">{{ _('Aktion') }}</th>
                        </tr>
                    </thead>
                    <tbody id="participantRows">
                    {% for p in participants %}
                        <tr>
                            <td>
                                {% if p.user %}
                                    {{ p.user.lastname }}, {{ p.user.firstname }}
                                {% else %}
                                    <span class="text-muted"><em>{{ _('Gelöschter Nutzer') }}</em></span>
                                {% endif %}
                            </td>
                            <td>
                                {% if p.user %}
                                    {% for group in p.user.groups %}
                                        <span class="label label-default">{{ group.name }}</span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endfor %}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>{{ p.geburtsdatum ? p.geburtsdatum|date('d.m.Y') : '-' }}</td>
                            <td>
                                {% if p.geschlecht == 'm' %}{{ _('Männlich') }}
                                {% elseif p.geschlecht == 'w' %}{{ _('Weiblich') }}
                                {% elseif p.geschlecht == 'd' %}{{ _('Divers') }}
                                {% else %}{{ p.geschlecht }}{% endif %}
                            </td>
                            <td class="text-end">
                                <button type="button" class="btn btn-default btn-sm"
                                        data-toggle="modal" 
                                        data-target="#genericEditModal"
                                        data-id="{{ p.id }}"
                                        data-name="{% if p.user %}{{ p.user.firstname }} {{ p.user.lastname }}{% else %}{{ _('Unbekannt') }}{% endif %}"
                                        data-dob="{{ p.geburtsdatum ? p.geburtsdatum|date('Y-m-d') : '' }}"
                                        data-gender="{{ p.geschlecht }}">
                                    {{ icon('pencil') }}
                                </button>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                {{ _('Keine Teilnehmer gefunden.') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Paginierung #}
            {% if maxPages > 1 %}
                <nav aria-label="Page navigation" class="text-center">
                    <ul class="pagination">
                        <li class="{{ currentPage == 1 ? 'disabled' : '' }}">
                            <a href="{{ currentPage > 1 ? path('sportabzeichen_admin_participants_index', {page: currentPage - 1}) : '#' }}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="active">
                            <span>Seite {{ currentPage }} von {{ maxPages }}</span>
                        </li>
                        <li class="{{ currentPage == maxPages ? 'disabled' : '' }}">
                            <a href="{{ currentPage < maxPages ? path('sportabzeichen_admin_participants_index', {page: currentPage + 1}) : '#' }}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>

    {# --- SINGLE MODAL --- #}
    <div class="modal fade" id="genericEditModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <form method="post" 
                  data-url-template="{{ path('sportabzeichen_admin_participants_update', {id: 'PLACEHOLDER_ID'}) }}">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">{{ _('Bearbeiten') }}: <span id="modalUserName"></span></h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>{{ _('Geburtsdatum') }}</label>
                            <input type="date" name="dob" id="modalDob" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>{{ _('Geschlecht') }}</label>
                            <div class="form-group">
                                <label>{{ _('Geschlecht') }}</label>
                                <select name="gender" id="modalGender" class="form-control">
                                    {# Die Values müssen exakt so heißen wie im Controller/Datenbank #}
                                    <option value="MALE">{{ _('Männlich') }}</option>
                                    <option value="FEMALE">{{ _('Weiblich') }}</option>
                                    <option value="DIVERSE">{{ _('Divers') }}</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">{{ _('Abbrechen') }}</button>
                        <button type="submit" class="btn btn-primary">{{ _('Speichern') }}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Pfad ggf. anpassen, wenn das Bundle anders heißt #}
    <script src="{{ asset('js/admin_participants.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}