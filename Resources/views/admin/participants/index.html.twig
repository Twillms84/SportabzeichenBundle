{% extends '@IServCore/page.html.twig' %}

{% block page_title %}{{ _('Teilnehmerverwaltung') }}{% endblock %}

{% block content %}
    {% include '@PulsRSportabzeichen/admin/_tabs.html.twig' with {'activeTab': 'participants_manage'} %}

    <div class="panel panel-default">
        <div class="panel-heading d-flex justify-content-between align-items-center">
            <h3 class="panel-title">
                {{ _('Registrierte Teilnehmer') }} 
                <span class="badge">{{ totalCount }}</span>
            </h3>
            <a href="{{ path('sportabzeichen_admin_participants_missing') }}" class="btn btn-primary btn-sm">
                {{ icon('plus') }} {{ _('Nacherfassen') }}
            </a>
        </div>

        <div class="panel-body">
            
            {# Suchfeld (funktioniert nur auf der aktuellen Seite via JS) #}
            <div class="input-group mb-3">
                <span class="input-group-addon">{{ icon('search') }}</span>
                <input type="text" id="searchTable" class="form-control" placeholder="{{ _('Auf dieser Seite filtern...') }}">
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Klasse</th>
                            <th>Geburtstag</th>
                            <th>Geschlecht</th>
                            <th class="text-end">Aktion</th>
                        </tr>
                    </thead>
                    <tbody id="participantRows">
                    {% for p in participants %}
                        <tr>
                            <td>{{ p.nachname }}, {{ p.vorname }}</td>
                            <td>{{ p.klasse|default('-') }}</td>
                            <td>{{ p.geburtsdatum ? p.geburtsdatum|date('d.m.Y') : '-' }}</td>
                            <td>{{ p.geschlecht }}</td>
                            <td class="text-end">
                                {# Button öffnet das SINGLE Modal #}
                                <button type="button" class="btn btn-default btn-sm"
                                        data-toggle="modal" 
                                        data-target="#genericEditModal"
                                        data-id="{{ p.id }}"
                                        data-name="{{ p.vorname }} {{ p.nachname }}"
                                        data-dob="{{ p.geburtsdatum ? p.geburtsdatum|date('Y-m-d') : '' }}"
                                        data-gender="{{ p.geschlecht }}">
                                    {{ icon('pencil') }}
                                </button>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="5" class="text-center text-muted">Keine Teilnehmer gefunden.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# --- PAGINIERUNG (Blättern) --- #}
            {% if maxPages > 1 %}
                <nav aria-label="Page navigation" class="text-center">
                    <ul class="pagination">
                        {# ZURÜCK #}
                        <li class="{{ currentPage == 1 ? 'disabled' : '' }}">
                            <a href="{{ currentPage > 1 ? path('sportabzeichen_admin_participants_index', {page: currentPage - 1}) : '#' }}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        {# SEITENANZEIGE (Vereinfacht: Zeigt Seite X von Y) #}
                        <li class="active">
                            <span>{{ currentPage }} / {{ maxPages }}</span>
                        </li>

                        {# WEITER #}
                        <li class="{{ currentPage == maxPages ? 'disabled' : '' }}">
                            <a href="{{ currentPage < maxPages ? path('sportabzeichen_admin_participants_index', {page: currentPage + 1}) : '#' }}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>

    {# --- EINZIGES MODAL (MUSS AUßERHALB DER FOR-SCHLEIFE SEIN!) --- #}
    <div class="modal fade" id="genericEditModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            {# JS ersetzt PLACEHOLDER_ID durch die echte ID #}
            <form method="post" 
                  data-url-template="{{ path('sportabzeichen_admin_participants_update', {id: 'PLACEHOLDER_ID'}) }}">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Bearbeiten: <span id="modalUserName"></span></h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Geburtsdatum</label>
                            <input type="date" name="dob" id="modalDob" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Geschlecht</label>
                            <select name="gender" id="modalGender" class="form-control">
                                <option value="m">Männlich</option>
                                <option value="w">Weiblich</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admin_participants.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}