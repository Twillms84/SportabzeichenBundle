{% extends '@IServCore/page.html.twig' %}

{% block title %}
    Ergebnisse eingeben ‚Äì {{ exam.exam_name }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* DEIN CSS - DIREKT √úBERNOMMEN */
        .table-results-compact {
            table-layout: fixed !important;
            width: 100% !important;
            font-size: 1rem !important; 
            border-collapse: collapse;
        }

        .col-name { width: 180px; }
        .col-age  { width: 50px; }
        .col-discipline { width: 125px !important; }

        .medal-gold   { background-color: #ffd700 !important; color: #000 !important; border: 1px solid #b8860b !important; font-weight: bold; }
        .medal-silber { background-color: #e0e0e0 !important; color: #000 !important; border: 1px solid #a0a0a0 !important; font-weight: bold; }
        .medal-bronze { background-color: #cd7f32 !important; color: #fff !important; border: 1px solid #8b4513 !important; font-weight: bold; }
        .medal-none   { background-color: #ffffff !important; }

        .discipline-selector, 
        .form-control-custom {
            font-size: 1rem !important;
            padding: 4px 2px !important;
            height: auto !important;
            width: 100% !important;
            text-align: center;
        }

        .discipline-selector {
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }

        .req-hint { 
            font-size: 0.75rem;
            color: #555; 
            display: flex; 
            justify-content: space-between; 
            padding: 0 4px;
            font-weight: 500;
        }

        .name-container { line-height: 1.3; }
        .badge-result { font-size: 0.8rem; padding: 4px 6px; }
    </style>
{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>üèÖ {{ exam.exam_name }}</h2>
        <a href="{{ path('sportabzeichen_results_exams') }}" class="btn btn-outline-secondary btn-sm">Zur√ºck</a>
    </div>

    <form id="autosave-form" 
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}"
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">

        <div class="table-responsive shadow-sm">
            <table class="table table-hover table-bordered align-middle table-results-compact bg-white">
                <thead class="table-light text-center">
                    <tr>
                        <th class="col-name text-start">Teilnehmer</th>
                        <th class="col-age">Alter</th>
                        {% for category, items in disciplines %}
                            {# Filtere Schwimmen aus der Haupttabelle #}
                            {% if category|trim|upper != 'SWIMMING' and category|trim|upper != 'SCHWIMMEN' %}
                                <th class="col-discipline">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>

                <tbody>
                {% for p in participants %}
                    {% set epResults = results[p.ep_id] ?? {} %}
                    {% set totalPoints = 0 %}
                    {% set hasSwimmingProof = false %}
                    {% set birthYear = exam.exam_year - p.age_year %}

                    {# Vorberechnung f√ºr Punkte & Nachweis-Status #}
                    {% for dId, resData in epResults %}
                        {% if resData.kategorie|default('')|trim|upper != 'SWIMMING' and resData.kategorie|default('')|trim|upper != 'SCHWIMMEN' %}
                            {% set totalPoints = totalPoints + (resData.points|default(0)) %}
                        {% endif %}
                        {% if resData.schwimmnachweis|default(false) and resData.points|default(0) > 0 %}
                            {% set hasSwimmingProof = true %}
                        {% endif %}
                    {% endfor %}

                    <tr data-ep-id="{{ p.ep_id }}" data-birth-year="{{ birthYear }}">
                        <td class="col-name name-container">
                            <div class="fw-bold">{{ p.vorname }} {{ p.nachname }}</div>
                            <div class="mt-1 d-flex gap-1">
                                <span class="badge {{ hasSwimmingProof ? 'bg-success' : 'bg-danger' }} badge-result">
                                    {{ hasSwimmingProof ? 'üèä' : '‚ùå' }}
                                </span>
                                <span class="badge bg-info text-dark badge-result" id="total-points-{{ p.ep_id }}">
                                    {{ totalPoints }} Pkt.
                                </span>
                            </div>
                        </td>

                        <td class="col-age text-center">{{ p.age_year }}</td>

                        {% for category, items in disciplines %}
                            {% if category|trim|upper != 'SWIMMING' and category|trim|upper != 'SCHWIMMEN' %}
                                
                                {# Nur Disziplinen finden, die zum Alter/Geschlecht passen #}
                                {% set options = [] %}
                                {% for d in items %}
                                    {% if d.geschlecht == p.gender and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                        {% set options = options|merge([d]) %}
                                    {% endif %}
                                {% endfor %}

                                {# Welche Disziplin ist aktuell gespeichert? #}
                                {% set selectedId = null %}
                                {% for d in options %}
                                    {% if epResults[d.id] is defined %}{% set selectedId = d.id %}{% endif %}
                                {% endfor %}
                                
                                {# Default auf erste Option falls nichts gespeichert #}
                                {% if selectedId is null and options|length > 0 %}
                                    {% set selectedId = options[0].id %}
                                {% endif %}

                                {# Medaillen-Klasse bestimmen #}
                                {% set resObj = epResults[selectedId] ?? null %}
                                {% set mClass = (resObj and resObj.stufe|lower in ['gold','silber','bronze']) ? 'medal-' ~ resObj.stufe|lower : 'medal-none' %}

                                <td class="p-1 col-discipline text-center">
                                    <select class="form-select discipline-selector mb-1 {{ mClass }}" 
                                            data-save data-ep-id="{{ p.ep_id }}" data-type="discipline">
                                        <option value="">--</option>
                                        {% for d in options %}
                                            <option value="{{ d.id }}" {% if selectedId == d.id %}selected{% endif %}
                                                    data-is-swimming="{{ d.schwimmnachweis ? '1' : '0' }}">
                                                {{ d.name }}
                                            </option>
                                        {% endfor %}
                                    </select>

                                    <input type="text" class="form-control form-control-custom {{ mClass }}"
                                           placeholder="---" value="{{ resObj.leistung ?? '' }}"
                                           data-save data-ep-id="{{ p.ep_id }}" data-type="leistung"
                                           data-current-points="{{ resObj.points|default(0) }}">

                                    <div class="req-hint">
                                        {% for d in options if d.id == selectedId %}
                                            <span title="Bronze">{{ d.bronze }}</span>
                                            <span title="Silber">{{ d.silber }}</span>
                                            <span title="Gold">{{ d.gold }}</span>
                                        {% endfor %}
                                    </div>
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}