{% extends '@IServCore/page.html.twig' %}

{% block title %}
    Ergebnisse eingeben ‚Äì {{ exam.exam_name }} ({{ exam.exam_year }})
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Jetzt laden wir ALLES √ºber diese eine Datei #}
    <link rel="stylesheet" href="{{ asset('css/sportabzeichen_results.css', 'pulsr-sportabzeichen') }}">
{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <h2>üèÖ Ergebnisse eingeben ‚Äì {{ exam.exam_name }} ({{ exam.exam_year }})</h2>

    {# Filter-Card #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label class="fw-bold">Klasse filtern:</label>
                </div>
                <div class="col-auto">
                    <select name="class" class="form-select w-auto">
                        <option value="">(Alle Klassen)</option>
                        {% for c in classes %}
                            <option value="{{ c.klasse }}" {% if selectedClass == c.klasse %}selected{% endif %}>
                                {{ c.klasse }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Filtern</button>
                    <a href="{{ path('sportabzeichen_results_index', {examId: exam.id}) }}" class="btn btn-outline-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    {# Hauptformular #}
    <form action="{{ path('sportabzeichen_results_save_all', {examId: exam.id}) }}" 
          method="post" id="autosave-form"
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}"
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="col-name">Name & Gesamtpunkte</th>
                        <th class="col-age">Alter</th>
                        {% for category, items in disciplines %}
                            {% if category|upper != 'SWIMMING' and category != 'Schwimmen' %}
                                <th class="text-center">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>

                <tbody>
                {% for p in participants %}
                    {% set epResults = results[p.ep_id] ?? {} %}
                    {% set totalPoints = 0 %}
                    {% for res in epResults %}
                        {% if res.kategorie|default('')|upper != 'SWIMMING' and res.kategorie|default('') != 'Schwimmen' %}
                            {% set totalPoints = totalPoints + (res.points|default(0)) %}
                        {% endif %}
                    {% endfor %}

                    <tr>
                        <td>
                            <div class="fw-bold">
                                {{ p.vorname }} {{ p.nachname }} 
                                <span class="badge bg-info text-dark total-points-badge ms-1" id="total-points-{{ p.ep_id }}">
                                    {{ totalPoints }} Pkt.
                                </span>
                            </div>
                            <small class="text-muted">{{ p.klasse }}</small>
                        </td>
                        <td class="text-center">{{ p.age_year }}</td>

                        {% for category, items in disciplines %}
                            {% if category|upper != 'SWIMMING' and category != 'Schwimmen' %}
                                
                                {% set options = [] %}
                                {% for d in items %}
                                    {% if d.geschlecht == p.gender and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                        {% set options = options|merge([d]) %}
                                    {% endif %}
                                {% endfor %}

                                {% set selectedDiscId = null %}
                                {% for d in options %}
                                    {% if epResults[d.id] is defined %}{% set selectedDiscId = d.id %}{% endif %}
                                {% endfor %}

                                {% if selectedDiscId is null and options|length > 0 %}
                                    {% set selectedDiscId = options[0].id %}
                                {% endif %}

                                {% set selectedValue = '' %}
                                {% set selectedPoints = 0 %}
                                {% set medalClass = '' %}
                                {% set currentReq = null %}
                                
                                {% for d in options %}
                                    {% if d.id == selectedDiscId %}{% set currentReq = d %}{% endif %}
                                {% endfor %}

                                {% if selectedDiscId and epResults[selectedDiscId] is defined %}
                                    {% set resObj = epResults[selectedDiscId] %}
                                    {% set selectedValue = resObj.leistung %}
                                    {% set selectedPoints = resObj.points|default(0) %}
                                    {% set stufe = resObj.stufe|default('none')|lower %}
                                    {% if stufe in ['gold', 'silber', 'bronze'] %}
                                        {% set medalClass = 'medal-' ~ stufe %}
                                    {% endif %}
                                {% endif %}

                                <td class="p-2 text-center col-discipline">
                                    <select name="results[{{ p.ep_id }}][{{ category }}][discipline]"
                                            class="form-select form-select-sm discipline-selector mb-1 {{ medalClass }}"
                                            data-save data-ep-id="{{ p.ep_id }}" data-type="discipline">
                                        <option value="">(keine)</option>
                                        {% for d in options %}
                                            <option value="{{ d.id }}" {% if selectedDiscId == d.id %}selected{% endif %}>{{ d.name }}</option>
                                        {% endfor %}
                                    </select>

                                    <input type="text" 
                                           class="form-control form-control-sm text-center fw-bold form-control-leistung {{ medalClass }}"
                                           placeholder="---" value="{{ selectedValue }}"
                                           data-save data-ep-id="{{ p.ep_id }}" data-type="leistung">

                                    {% if currentReq %}
                                        <div class="req-hint mt-1 d-flex justify-content-center gap-1">
                                            <span class="badge border" style="background-color: #cd7f32; color: white;">{{ currentReq.bronze }}</span>
                                            <span class="badge border text-dark" style="background-color: #c0c0c0;">{{ currentReq.silber }}</span>
                                            <span class="badge border text-dark" style="background-color: #ffd700;">{{ currentReq.gold }}</span>
                                        </div>
                                    {% endif %}
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}