{% extends '@IServCore/page.html.twig' %}

{# --- TITEL --- #}
{% block title %}Ergebnisse ‚Äì {{ exam.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sportabzeichen_results.css', 'pulsr-sportabzeichen') }}">
{% endblock %}

{% block content %}

{# --- KONFIGURATION & HELPER --- #}
{% set unitMap = {
    'UNIT_METERS': 'm',
    'UNIT_CENTIMETERS': 'cm',
    'UNIT_SECONDS': 'Sek.',
    'UNIT_MINUTES': 'Min.',
    'UNIT_HOURS': 'Std.',
    'UNIT_NUMBER': 'Anz.'
} %}

{# Pr√ºfen, ob Schwimmen existiert (um Spalte/Schalter anzuzeigen) #}
{% set hasSwimmingCategory = false %}
{% for cat in disciplines|keys %}
    {% if cat|upper in ['SWIMMING', 'SCHWIMMEN'] %}
        {% set hasSwimmingCategory = true %}
    {% endif %}
{% endfor %}

<div class="container-fluid mt-3">
    
    {# --- HEADER --- #}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>üèÖ {{ exam.name }} ({{ exam.year }})</h4>
        
        <div class="d-flex gap-2 align-items-center">
            
            {# Ansicht: Spalten Filter #}
            <div class="dropdown">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    {{ icon('eye')|raw }} Ansicht
                </button>
                <ul class="dropdown-menu">
                    {% for category in disciplines|keys %}
                        {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                            <li>
                                <div class="dropdown-item">
                                    <div class="form-check">
                                        <input class="form-check-input js-col-toggle" type="checkbox" 
                                               value="{{ category }}" 
                                               id="check-{{ category }}" 
                                               data-category="{{ category }}" 
                                               checked>
                                        <label class="form-check-label" for="check-{{ category }}">{{ category }}</label>
                                    </div>
                                </div>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>

            {# Filter: Klasse #}
            {% if classes|length > 0 %}
                <form method="get" class="d-flex gap-1 align-items-center">
                    {# Sortierung beibehalten #}
                    <input type="hidden" name="sort" value="{{ app.request.query.get('sort') }}">
                    <input type="hidden" name="order" value="{{ app.request.query.get('order') }}">
                    
                    <select name="class" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
                        <option value="">Alle Klassen</option>
                        {% for c in classes %}
                            <option value="{{ c }}" {% if c == selectedClass %}selected{% endif %}>
                                {{ c }}
                            </option>
                        {% endfor %}
                    </select>
                </form>
            {% endif %}
            
            {# Button: Drucken #}
            <a href="{{ path('sportabzeichen_results_print_groupcard', {'examId': exam.id, 'class': app.request.query.get('class')}) }}" 
               class="btn btn-default btn-sm" 
               target="_blank" 
               title="Gruppenpr√ºfkarte drucken">
                {{ icon('print')|raw }} Drucken
            </a>
            
            <a href="{{ path('sportabzeichen_exams_dashboard') }}" class="btn btn-outline-secondary btn-sm">Zur√ºck</a>
        </div>
    </div>

    {# --- FORMULAR & TABELLE --- #}
    <form id="autosave-form" 
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}"
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">

        <div class="table-responsive">
            <table class="table table-sm table-bordered table-results-compact align-middle table-hover">
                <thead class="table-light text-center align-middle sticky-top" style="z-index: 10;">
                    <tr>
                        {# SPALTE: TEILNEHMER (Sortierbar) #}
                        <th class="col-name text-start" style="min-width: 200px;">
                            {% set currentSort = app.request.query.get('sort', 'lastname') %}
                            {% set currentOrder = app.request.query.get('order', 'asc') %}
                            
                            {% if currentSort == 'lastname' and currentOrder == 'asc' %}
                                {% set nextOrder = 'desc' %}
                                {% set sortIcon = icon('arrow-down') %}
                            {% elseif currentSort == 'lastname' and currentOrder == 'desc' %}
                                {% set nextOrder = 'asc' %}
                                {% set sortIcon = icon('arrow-up') %}
                            {% else %}
                                {% set nextOrder = 'asc' %}
                                {% set sortIcon = '' %}
                            {% endif %}

                            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({
                                'id': exam.id, 
                                'sort': 'lastname', 
                                'order': nextOrder
                            })) }}" 
                            class="sort-header d-flex justify-content-between align-items-center text-dark text-decoration-none">
                                <span>Teilnehmer</span>
                                <span>{{ sortIcon|raw }}</span>
                            </a>
                        </th>

                        {# SPALTEN: DISZIPLINEN #}
                        {% for category in disciplines|keys %}
                            {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                <th class="col-discipline col-cat-{{ category }}">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {# HAUPTSCHLEIFE: Teilnehmer #}
                    {% for p in participants %}
                        
                        {# Ergebnisse f√ºr diesen Teilnehmer holen (Key ist p.ep_id) #}
                        {% set epResults = results[p.ep_id] ?? {} %}
                        
                        <tr data-ep-id="{{ p.ep_id }}" id="row-{{ p.ep_id }}">
                            
                            {# 1. INFO SPALTE #}
                            <td class="col-name py-2">
                                <div class="name-container">
                                    <span class="fw-bold d-block">{{ p.nachname }}, {{ p.vorname }}</span>
                                    <div class="d-flex justify-content-between align-items-center mt-1">
                                        <span class="small text-muted">Kl. {{ p.klasse|default('-') }} ({{ p.age_year }})</span>
                                        
                                        {# Punkte Anzeige #}
                                        <span class="badge bg-light text-dark border badge-mini" id="total-points-{{ p.ep_id }}">
                                            <span class="pts-val fw-bold">{{ p.total_points|default(0) }}</span> Pkt.
                                        </span>
                                    </div>
                                    
                                    {# Medaille Anzeige #}
                                    <div class="mt-1" style="min-height: 20px;">
                                        <span class="badge badge-mini js-medal-badge w-100" 
                                              id="final-medal-{{ p.ep_id }}"
                                              data-medal="{{ p.final_medal|default('') }}"
                                              style="display: {{ p.final_medal ? 'block' : 'none' }}; 
                                                     background-color: {{ p.final_medal == 'Gold' ? '#ffc107' : (p.final_medal == 'Silber' ? '#adb5bd' : (p.final_medal == 'Bronze' ? '#fd7e14' : 'transparent')) }};
                                                     color: {{ p.final_medal ? '#fff' : 'inherit' }}">
                                            {{ p.final_medal }}
                                        </span>
                                    </div>
                                </div>

                                {# SCHWIMMEN TOGGLE #}
                                {% if hasSwimmingCategory %}
                                    <div class="mt-2 pt-2 border-top">
                                        <div class="form-check form-switch p-0 m-0 d-flex align-items-center justify-content-between">
                                            <label class="form-check-label small fw-semibold me-2 {{ p.has_swimming ? 'text-success' : 'text-danger' }}" 
                                                   for="swim-switch-{{ p.ep_id }}"
                                                   id="swimming-label-{{ p.ep_id }}">
                                                {{ p.has_swimming ? 'Schwimmen: OK' : 'Fehlt' }}
                                            </label>
                                            <input class="form-check-input m-0" type="checkbox" role="switch"
                                                   id="swim-switch-{{ p.ep_id }}"
                                                   {{ p.has_swimming ? 'checked' : '' }}
                                                   data-save 
                                                   data-ep-id="{{ p.ep_id }}" 
                                                   data-type="swimming"
                                                   style="cursor: pointer;">
                                        </div>
                                        {% if p.swimming_expiry and p.has_swimming %}
                                            <div class="small text-muted fst-italic text-end" style="font-size: 0.7rem;">
                                                bis {{ p.swimming_expiry|date('d.m.y') }}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </td>

                            {# 2. DISZIPLIN SPALTEN #}
                            {# 'items' enth√§lt die Requirements f√ºr die Kategorie #}
                            {# 2. DISZIPLIN SPALTEN #}
                            {# 3. DISZIPLINEN #}
                        {% for category, items in disciplines %}
                            {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                
                                {# --- LOGIK START: Optionen sammeln --- #}
                                {% set options = [] %}
                                {% set pGender = p.geschlecht %} 
                                
                                {# Wir iterieren durch Disziplinen UND deren Requirements #}
                                {% for discipline in items %}
                                    {% if discipline.requirements is defined %}
                                        {% for req in discipline.requirements %}
                                            {# Filterung nach Alter/Geschlecht #}
                                            {% if req.gender == pGender and p.age_year >= req.minAge and p.age_year <= req.maxAge %}
                                                {# Merge Disziplin-Daten in das Requirement #}
                                                {% set combo = req|merge({'discipline': discipline}) %}
                                                {% set options = options|merge([combo]) %}
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                {% endfor %}

                                {# --- LOGIK: Welches Ergebnis ist ausgew√§hlt? --- #}
                                {% set selectedReq = null %}
                                {% set resObj = null %}

                                {# Haben wir schon ein Ergebnis f√ºr eine der m√∂glichen Disziplinen? #}
                                {% for req in options %}
                                    {% if epResults[req.discipline.id] is defined %}
                                        {% set selectedReq = req %}
                                        {% set resObj = epResults[req.discipline.id] %}
                                    {% endif %}
                                {% endfor %}

                                {# Fallback: Erste Option w√§hlen #}
                                {% if selectedReq is null and options|length > 0 %}
                                    {% set selectedReq = options[0] %}
                                {% endif %}
                                
                                {# CSS Klasse f√ºr Medaille bestimmen #}
                                {% set mClass = 'medal-none' %}
                                {% if resObj %}
                                    {% if resObj.points == 3 %}{% set mClass = 'medal-gold' %}
                                    {% elseif resObj.points == 2 %}{% set mClass = 'medal-silber' %}
                                    {% elseif resObj.points == 1 %}{% set mClass = 'medal-bronze' %}
                                    {% endif %}
                                {% endif %}

                                <td class="p-1 col-discipline col-cat-{{ category }}">
                                    <div class="d-flex flex-column">
                                        
                                        {# --- DROPDOWN --- #}
                                        <select class="discipline-selector js-discipline-select mb-1 {{ mClass }}" 
                                                data-save 
                                                data-ep-id="{{ p.ep_id }}" 
                                                data-type="discipline" 
                                                data-kategorie="{{ category }}">
                                            
                                            {% if options is empty %}
                                                <option value="">--</option>
                                            {% else %}
                                                {% for req in options %}
                                                    {% set cleanUnit = unitMap[req.discipline.unit] ?? req.discipline.unit %}
                                                    <option value="{{ req.discipline.id }}" 
                                                            {{ selectedReq.discipline.id == req.discipline.id ? 'selected' : '' }}
                                                            data-unit="{{ cleanUnit }}"
                                                            data-bronze="{{ req.bronze }}"
                                                            data-silber="{{ req.silver }}"
                                                            data-gold="{{ req.gold }}">
                                                        {{ req.discipline.name }}
                                                    </option>
                                                {% endfor %}
                                            {% endif %}
                                        </select>

                                        {# --- INPUT FELD --- #}
                                        <div class="input-group input-group-sm">
                                            <input type="text" 
                                                   class="form-control form-control-custom {{ mClass }}"
                                                   value="{{ resObj ? resObj.leistung : '' }}"
                                                   data-save 
                                                   data-ep-id="{{ p.ep_id }}" 
                                                   data-type="leistung" 
                                                   data-kategorie="{{ category }}">
                                        </div>

                                        {# --- HINTS (Werte f√ºr B/S/G) --- #}
                                        <div class="req-hint">
                                            <span class="req-val-b" title="Bronze">B:<span class="js-val-b">{{ selectedReq ? selectedReq.bronze : '-' }}</span></span>
                                            <span class="req-val-s" title="Silber">S:<span class="js-val-s">{{ selectedReq ? selectedReq.silver : '-' }}</span></span>
                                            <span class="req-val-g" title="Gold">G:<span class="js-val-g">{{ selectedReq ? selectedReq.gold : '-' }}</span></span>
                                        </div>
                                    </div>
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
    <script>
        // Kleiner Inline-Script f√ºr die visuelle Schwimm-Anzeige (das Speichern macht autosave.js)
        document.addEventListener('change', function(e) {
            if (e.target.matches('[data-type="swimming"]')) {
                const epId = e.target.getAttribute('data-ep-id');
                const label = document.getElementById('swimming-label-' + epId);
                if (label) {
                    if (e.target.checked) {
                        label.textContent = 'Schwimmen: OK';
                        label.classList.remove('text-danger');
                        label.classList.add('text-success');
                    } else {
                        label.textContent = 'Fehlt';
                        label.classList.remove('text-success');
                        label.classList.add('text-danger');
                    }
                }
            }
            // Disziplin-Wechsel Update der Hints (B/S/G)
            if (e.target.matches('.js-discipline-select')) {
                const opt = e.target.options[e.target.selectedIndex];
                const container = e.target.closest('td');
                if(container) {
                    container.querySelector('.js-val-b').textContent = opt.getAttribute('data-bronze');
                    container.querySelector('.js-val-s').textContent = opt.getAttribute('data-silber'); // auf 'silber' achten
                    container.querySelector('.js-val-g').textContent = opt.getAttribute('data-gold');
                    // Einheit im Input-Group-Text updaten
                    const unitSpan = container.querySelector('.input-group-text');
                    if(unitSpan) unitSpan.textContent = opt.getAttribute('data-unit');
                }
            }
        });
    </script>
{% endblock %}