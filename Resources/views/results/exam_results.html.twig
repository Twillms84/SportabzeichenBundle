{% extends '@IServCore/page.html.twig' %}

{% block title %}Ergebnisse ‚Äì {{ exam.exam_name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sportabzeichen_results.css', 'pulsr-sportabzeichen') }}">
{% endblock %}

{% block content %}

{# --- MAPPING F√úR EINHEITEN --- #}
{% set unitMap = {
    'UNIT_METERS': 'm',
    'UNIT_CENTIMETERS': 'cm',
    'UNIT_SECONDS': 'Sek.',
    'UNIT_MINUTES': 'Min.',
    'UNIT_HOURS': 'Std.',
    'UNIT_NUMBER': 'Anz.'
} %}

{# --- PR√úFUNG: Gibt es √ºberhaupt Schwimmen in den Disziplinen? --- #}
{% set hasSwimmingCategory = false %}
{% for cat in disciplines|keys %}
    {% if cat|upper in ['SWIMMING', 'SCHWIMMEN'] %}
        {% set hasSwimmingCategory = true %}
    {% endif %}
{% endfor %}

<div class="container-fluid mt-3">
    
    {# --- HEADER & TOOLS --- #}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>üèÖ {{ exam.exam_name }} ({{ exam.exam_year }})</h4>
        
        <div class="d-flex gap-2 align-items-center">
            
            {# Ansicht: Spalten ein/ausblenden #}
            <div class="dropdown">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    {{ icon('eye')|raw }} Ansicht
                </button>
                <ul class="dropdown-menu">
                    {% for category in disciplines|keys %}
                        {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                            <li>
                                <div class="dropdown-item">
                                    <div class="form-check">
                                        <input class="form-check-input js-col-toggle" type="checkbox" 
                                               value="{{ category }}" 
                                               id="check-{{ category }}" 
                                               data-category="{{ category }}" 
                                               checked>
                                        <label class="form-check-label" for="check-{{ category }}">{{ category }}</label>
                                    </div>
                                </div>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>

            {# FILTER: Klasse #}
            {% if classes|length > 0 %}
                <form method="get" class="d-flex gap-1 align-items-center">
                    <input type="hidden" name="sort" value="{{ app.request.query.get('sort') }}">
                    <input type="hidden" name="order" value="{{ app.request.query.get('order') }}">
                    
                    <select name="class" class="form-select form-select-sm" style="width: auto;">
                        <option value="">Alle Klassen</option>
                        {% for c in classes %}
                            <option value="{{ c.klasse }}" {{ selectedClass == c.klasse ? 'selected' : '' }}>
                                {{ c.klasse }}
                            </option>
                        {% endfor %}
                    </select>
                    <button type="submit" class="btn btn-primary btn-sm">
                        {{ icon('filter')|raw }} Filter
                    </button>
                </form>
            {% endif %}
            
            <a href="{{ path('sportabzeichen_exams_dashboard') }}" class="btn btn-outline-secondary btn-sm">Zur√ºck</a>
        </div>
    </div>

    {# --- HAUPTTABELLE --- #}
    <form id="autosave-form" 
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}"
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">

        <div class="table-responsive">
            <table class="table table-sm table-bordered table-results-compact align-middle">
                <thead class="table-light text-center align-middle">
                    <tr>
                        {# SORTIERBARE SPALTE: TEILNEHMER #}
                        <th class="col-name text-start">
                            {% set currentSort = app.request.query.get('sort', 'lastname') %}
                            {% set currentOrder = app.request.query.get('order', 'asc') %}
                            
                            {% if currentSort == 'lastname' and currentOrder == 'asc' %}
                                {% set nextOrder = 'desc' %}
                                {% set sortIcon = icon('arrow-down') %}
                            {% elseif currentSort == 'lastname' and currentOrder == 'desc' %}
                                {% set nextOrder = 'asc' %}
                                {% set sortIcon = icon('arrow-up') %}
                            {% else %}
                                {% set nextOrder = 'asc' %}
                                {% set sortIcon = '' %}
                            {% endif %}

                            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({
                                'examId': exam.id, 
                                'sort': 'lastname', 
                                'order': nextOrder
                            })) }}" 
                               class="sort-header d-flex justify-content-between align-items-center text-dark">
                                <span>Teilnehmer</span>
                                <span>{{ sortIcon|raw }}</span>
                            </a>
                        </th>

                        {# DISZIPLIN HEADERS #}
                        {% for category in disciplines|keys %}
                            {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                <th class="col-discipline col-cat-{{ category }}">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                {% for p in participants %}
                    {% set epResults = results[p.ep_id] ?? {} %}
                    <tr data-ep-id="{{ p.ep_id }}" id="row-{{ p.ep_id }}">
                        
                        {# 1. NAME, KLASSE & INFO #}
                        <td class="col-name py-2">
                            <div class="name-container">
                                <span class="name-main fw-bold">{{ p.vorname }} {{ p.nachname }}</span>
                                <span class="name-age text-muted">({{ p.age_year }})</span>
                            </div>
                            
                            <div class="small text-muted mb-2">
                                Klasse: <span class="text-dark fw-semibold">{{ p.klasse|default('-') }}</span>
                            </div>
                            
                            <div class="d-flex flex-column gap-1">
                                {# Punkte & Medaille #}
                                <div class="d-flex gap-1 align-items-center">
                                    <span class="badge bg-light text-dark border badge-mini" id="total-points-{{ p.ep_id }}">
                                        <span class="pts-val fw-bold">{{ p.total_points|default(0) }}</span> Pkt.
                                    </span>
                                    
                                    <span class="badge badge-mini js-medal-badge" 
                                          id="final-medal-{{ p.ep_id }}"
                                          data-medal="{{ p.final_medal|default('') }}"
                                          style="display: {{ p.final_medal ? 'inline-block' : 'none' }}">
                                        {{ p.final_medal }}
                                    </span>
                                </div>

                                {# NEU: Manueller Schwimmnachweis Switch #}
                                {% if hasSwimmingCategory %}
                                    <div class="mt-1">
                                        <div class="form-check form-switch d-flex align-items-center ps-0 gap-2">
                                            {# Checkbox: data-type="swimming" muss im Controller behandelt werden #}
                                            <input class="form-check-input ms-0" type="checkbox" role="switch"
                                                   id="swim-switch-{{ p.ep_id }}"
                                                   {{ p.has_swimming ? 'checked' : '' }}
                                                   data-save 
                                                   data-ep-id="{{ p.ep_id }}" 
                                                   data-type="swimming"
                                                   style="cursor: pointer;">
                                            
                                            <label class="form-check-label small fw-semibold {{ p.has_swimming ? 'text-success' : 'text-danger' }}" 
                                                   for="swim-switch-{{ p.ep_id }}"
                                                   id="swimming-label-{{ p.ep_id }}">
                                                {{ p.has_swimming ? 'Schwimmen: OK' : 'Schwimmen: Fehlt' }}
                                            </label>
                                        </div>
                                        
                                        {# Optional: Ablaufdatum anzeigen, falls vorhanden #}
                                        {% if p.swimming_expiry and p.has_swimming %}
                                            <div class="small text-muted fst-italic ms-1" style="font-size: 0.75rem;">
                                                G√ºltig bis: {{ p.swimming_expiry|date('d.m.Y') }}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </div>
                        </td>

                        {# 3. DISZIPLINEN #}
                        {% for category, items in disciplines %}
                            {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                
                                {% set options = [] %}
                                {% set pGender = (p.geschlecht|slice(0, 1)|upper == 'M') ? 'MALE' : 'FEMALE' %}
                                {% for d in items %}
                                    {% if d.geschlecht == pGender and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                        {% set options = options|merge([d]) %}
                                    {% endif %}
                                {% endfor %}

                                {% set selectedId = null %}
                                {% for d in options %}
                                    {% if d.id in epResults|keys %}
                                        {% set selectedId = d.id %}
                                    {% endif %}
                                {% endfor %}
                                {% if selectedId is null and options|length > 0 %}{% set selectedId = options[0].id %}{% endif %}
                                
                                {% set resObj = epResults[selectedId] ?? null %}
                                {% set mClass = (resObj and resObj.stufe|lower in ['gold','silber','bronze']) ? 'medal-' ~ resObj.stufe|lower : 'medal-none' %}

                                <td class="p-1 col-discipline col-cat-{{ category }}">
                                    <div class="d-flex flex-column">
                                        <select class="discipline-selector js-discipline-select mb-1 {{ mClass }}" 
                                                data-save data-ep-id="{{ p.ep_id }}" data-type="discipline" data-kategorie="{{ category }}">
                                            {% if options is empty %}
                                                <option value="">--</option>
                                            {% else %}
                                                {% for d in options %}
                                                    {% set cleanUnit = unitMap[d.einheit] ?? d.einheit %}
                                                    <option value="{{ d.id }}" 
                                                            {{ selectedId == d.id ? 'selected' : '' }}
                                                            data-unit="{{ cleanUnit }}"
                                                            data-bronze="{{ d.bronze }}"
                                                            data-silber="{{ d.silber }}"
                                                            data-gold="{{ d.gold }}">
                                                        {{ d.name }}
                                                    </option>
                                                {% endfor %}
                                            {% endif %}
                                        </select>

                                        <div class="input-group input-group-sm">
                                            <input type="text" class="form-control form-control-custom {{ mClass }}"
                                                   value="{{ resObj.leistung ?? '' }}"
                                                   data-save data-ep-id="{{ p.ep_id }}" data-type="leistung" data-kategorie="{{ category }}">
                                        </div>

                                        <div class="req-hint">
                                            <span class="req-val-b" title="Bronze">B:<span class="js-val-b">-</span></span>
                                            <span class="req-val-s" title="Silber">S:<span class="js-val-s">-</span></span>
                                            <span class="req-val-g" title="Gold">G:<span class="js-val-g">-</span></span>
                                        </div>
                                    </div>
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
    {# Kleines Inline-Script, um das Label beim Umschalten visuell sofort anzupassen (f√ºr bessere UX) #}
    <script>
        document.addEventListener('change', function(e) {
            if (e.target.matches('[data-type="swimming"]')) {
                const epId = e.target.getAttribute('data-ep-id');
                const label = document.getElementById('swimming-label-' + epId);
                if (label) {
                    if (e.target.checked) {
                        label.textContent = 'Schwimmen: OK';
                        label.classList.remove('text-danger');
                        label.classList.add('text-success');
                    } else {
                        label.textContent = 'Schwimmen: Fehlt';
                        label.classList.remove('text-success');
                        label.classList.add('text-danger');
                    }
                }
            }
        });
    </script>
{% endblock %}