{% extends '@IServCore/page.html.twig' %}

{% block title %}
    Ergebnisse eingeben ‚Äì {{ exam.exam_name }} ({{ exam.exam_year }})
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Jetzt laden wir ALLES √ºber diese eine Datei #}
    <link rel="stylesheet" href="{{ asset('css/sportabzeichen_results.css', 'pulsr-sportabzeichen') }}">
{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <h2>üèÖ Ergebnisse eingeben ‚Äì {{ exam.exam_name }} ({{ exam.exam_year }})</h2>

    {# Filter-Card #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label class="fw-bold">Klasse filtern:</label>
                </div>
                <div class="col-auto">
                    <select name="class" class="form-select w-auto">
                        <option value="">(Alle Klassen)</option>
                        {% for c in classes %}
                            <option value="{{ c.klasse }}" {% if selectedClass == c.klasse %}selected{% endif %}>
                                {{ c.klasse }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Filtern</button>
                    <a href="{{ path('sportabzeichen_results_index', {examId: exam.id}) }}" class="btn btn-outline-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    {# Hauptformular #}
    <form action="{{ path('sportabzeichen_results_save_all', {examId: exam.id}) }}" 
          method="post" id="autosave-form"
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}"
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="col-name">Name & Gesamtpunkte</th>
                        <th class="col-age">Alter</th>
                        {% for category, items in disciplines %}
                            {% if category|upper != 'SWIMMING' and category != 'Schwimmen' %}
                                <th class="text-center">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>

                <tbody>
                {% for p in participants %}
                    {% set epResults = results[p.ep_id] ?? {} %}
                    
                    {# 1. Check Schwimmnachweis #}
                    {% set hasSwimmingProof = false %}
                    {% set proofValidUntil = null %}
                    
                    {% for resId, resData in epResults %}
                        {# Wir pr√ºfen, ob das Resultat den Nachweis erbringt #}
                        {# Hinweis: Du musst sicherstellen, dass 'schwimmnachweis' im Result-Objekt/Requirement mitgeliefert wird #}
                        {% if resData.schwimmnachweis|default(false) and resData.stufe|default('none') != 'none' %}
                            {% set hasSwimmingProof = true %}
                            
                            {# G√ºltigkeit berechnen #}
                            {% if p.age_year < 18 %}
                                {% set birthYear = exam.exam_year - p.age_year %}
                                {% set proofValidUntil = birthYear + 18 %}
                            {% else %}
                                {% set proofValidUntil = exam.exam_year + 5 %}
                            {% endif %}
                        {% endif %}
                    {% endfor %}

                    <tr>
                        <td class="col-name text-wrap">
                            <div class="fw-bold">{{ p.vorname }} {{ p.nachname }}</div>
                            <div class="mt-1">
                                {% if hasSwimmingProof %}
                                    <span class="badge bg-success" style="font-size: 0.7rem;">
                                        üèä Schwimmnachweis g√ºltig bis {{ proofValidUntil }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-danger" style="font-size: 0.7rem;">
                                        ‚ùå Schwimmnachweis fehlt
                                    </span>
                                {% endif %}
                            </div>
                            <small class="text-muted">{{ p.klasse }} | {{ totalPoints }} Pkt.</small>
                        </td>
                        
                        <td class="col-age text-center">{{ p.age_year }}</td>

                        {% for category, items in disciplines %}
                            {# Der sicherere Check gegen SWIMMING #}
                            {% if category|trim|upper != 'SWIMMING' and category|trim != 'Schwimmen' %}
                                <td class="col-discipline p-2">
                                    {# ... dein Select und Input ... #}
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}