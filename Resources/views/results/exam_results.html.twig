{% extends '@IServCore/page.html.twig' %}

{% block content %}
<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>üèÖ {{ exam.exam_name }} ({{ exam.exam_year }})</h4>
        <a href="{{ path('sportabzeichen_results_exams') }}" class="btn btn-outline-secondary btn-sm">Zur√ºck</a>
    </div>

    <form id="autosave-form" 
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}"
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">

        <div class="table-responsive">
            <table class="table table-sm table-bordered table-results-compact">
                <thead>
                    <tr>
                        <th class="col-name">Teilnehmer</th>
                        <th class="col-class text-center">Kl.</th>
                        {% for category in disciplines|keys %}
                            {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                <th class="text-center">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                {% for p in participants %}
                    {% set epResults = results[p.ep_id] ?? {} %}
                    <tr data-ep-id="{{ p.ep_id }}" id="row-{{ p.ep_id }}" class="medal-row-{{ p.final_medal|lower }}">
                        <td class="col-name">
                            <div class="fw-bold">{{ p.vorname }} {{ p.nachname }}</div>
                            <div class="d-flex gap-1 mt-1">
                                <span class="badge {{ p.has_swimming ? 'bg-success' : 'bg-danger' }}" id="swimming-status-{{ p.ep_id }}" style="font-size: 0.7rem;">
                                    {{ p.has_swimming ? 'üèä OK' : '‚ùå Schwimmen' }}
                                </span>
                                <span class="badge bg-info text-dark" id="total-points-{{ p.ep_id }}" style="font-size: 0.7rem;">
                                    {{ p.total_points }} Pkt.
                                </span>
                            </div>
                        </td>
                        <td class="col-class text-center align-middle fw-bold">{{ p.klasse|default('-') }}</td>

                        {% for category, items in disciplines %}
                            {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                {% set options = [] %}
                                {% for d in items if d.geschlecht == (p.geschlecht|first|upper == 'M' ? 'MALE' : 'FEMALE') and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                    {% set options = options|merge([d]) %}
                                {% endfor %}

                                {% set selectedId = null %}
                                {% for d in options if epResults[d.id] is defined %}{% set selectedId = d.id %}{% endfor %}
                                {% if selectedId is null and options|length > 0 %}{% set selectedId = options[0].id %}{% endif %}
                                {% set resObj = epResults[selectedId] ?? null %}
                                {% set mClass = (resObj and resObj.stufe|lower in ['gold','silber','bronze']) ? 'medal-' ~ resObj.stufe|lower : 'medal-none' %}

                                <td class="p-1 col-discipline">
                                    <select class="form-select discipline-selector mb-1 {{ mClass }}" data-save data-ep-id="{{ p.ep_id }}">
                                        <option value="">--</option>
                                        {% for d in options %}
                                            <option value="{{ d.id }}" {% if selectedId == d.id %}selected{% endif %}>{{ d.name }}</option>
                                        {% endfor %}
                                    </select>
                                    <input type="text" class="form-control form-control-custom {{ mClass }}" 
                                           value="{{ resObj.leistung ?? '' }}" data-save data-ep-id="{{ p.ep_id }}">
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}