{% extends '@IServCore/page.html.twig' %}

{% block title %}
    Ergebnisse eingeben ‚Äì {{ exam.exam_name }} ({{ exam.exam_year }})
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Tabellen-Architektur fixieren */
        .table-fixed-layout {
            table-layout: fixed !important;
            width: 100% !important;
        }

        /* Spaltenbreiten definieren */
        .col-name { width: 260px; }
        .col-age  { width: 60px; }
        .col-discipline { width: 165px !important; }

        /* Dropdowns schmal halten und Text k√ºrzen */
        .discipline-selector {
            width: 100% !important;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
            display: block;
        }

        /* Hilfstexte und Badges */
        .req-hint { font-size: 0.7rem; color: #666; display: block; margin-top: 2px; }
        .total-points-badge { font-size: 0.75rem; font-weight: bold; }
        
        /* Medaillen-Farben (IServ Look) */
        .medal-gold   { background-color: #ffd700 !important; color: #000 !important; border-color: #b8860b !important; }
        .medal-silber { background-color: #c0c0c0 !important; color: #000 !important; border-color: #808080 !important; }
        .medal-bronze { background-color: #cd7f32 !important; color: #fff !important; border-color: #8b4513 !important; }
        
        /* Damit lange Namen in der festen Spalte umbrechen */
        .name-container { white-space: normal; word-wrap: break-word; }
        
        .swim-badge { transition: all 0.3s ease; }
    </style>
{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>üèÖ Ergebnisse eingeben ‚Äì {{ exam.exam_name }}</h2>
        <a href="{{ path('sportabzeichen_results_exams') }}" class="btn btn-outline-secondary">Zur√ºck zur √úbersicht</a>
    </div>

    {# Filter-Sektion #}
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label class="fw-bold">Klasse:</label>
                </div>
                <div class="col-auto">
                    <select name="class" class="form-select w-auto">
                        <option value="">(Alle)</option>
                        {% for c in classes %}
                            <option value="{{ c.klasse }}" {% if selectedClass == c.klasse %}selected{% endif %}>{{ c.klasse }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Filtern</button>
                    <a href="{{ path('sportabzeichen_results_index', {examId: exam.id}) }}" class="btn btn-outline-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    {# Hauptformular f√ºr Autosave #}
    <form id="autosave-form" 
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}"
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">

        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover table-bordered align-middle table-fixed-layout bg-white">
                <thead class="table-light text-center">
                    <tr>
                        <th class="col-name text-start">Name & Nachweise</th>
                        <th class="col-age">Alter</th>
                        {% for category, items in disciplines %}
                            {% if category|trim|upper != 'SWIMMING' and category|trim|upper != 'SCHWIMMEN' %}
                                <th class="col-discipline">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>

                <tbody>
                {% for p in participants %}
                    {% set epResults = results[p.ep_id] ?? {} %}
                    {% set totalPoints = 0 %}
                    {% set hasSwimmingProof = false %}
                    {% set proofValidUntil = null %}

                    {# 1. VORBERECHNUNG: Punkte und Schwimmnachweis f√ºr diesen Teilnehmer #}
                    {% for dId, resData in epResults %}
                        {# Punkte z√§hlen (Kategorie Swimming/Schwimmen ignorieren) #}
                        {% if resData.kategorie|default('')|trim|upper != 'SWIMMING' and resData.kategorie|default('')|trim|upper != 'SCHWIMMEN' %}
                            {% set totalPoints = totalPoints + (resData.points|default(0)) %}
                        {% endif %}

                        {# Schwimm-Nachweis Logik aus Requirements #}
                        {% if resData.schwimmnachweis|default(false) and resData.points|default(0) > 0 %}
                            {% set hasSwimmingProof = true %}
                            {% if p.age_year < 18 %}
                                {% set birthYear = exam.exam_year - p.age_year %}
                                {% set proofValidUntil = birthYear + 18 %}
                            {% else %}
                                {% set proofValidUntil = exam.exam_year + 5 %}
                            {% endif %}
                        {% endif %}
                    {% endfor %}

                    <tr data-ep-id="{{ p.ep_id }}" data-birth-year="{{ exam.exam_year - p.age_year }}">
                        {# NAME & BADGES #}
                        <td class="name-container">
                            <div class="fw-bold">{{ p.vorname }} {{ p.nachname }}</div>
                            <div class="my-1 d-flex flex-wrap gap-1">
                                <span class="badge {{ hasSwimmingProof ? 'bg-success' : 'bg-danger' }} swim-badge" 
                                      id="swim-badge-{{ p.ep_id }}" 
                                      style="font-size: 0.65rem;">
                                    {% if hasSwimmingProof %}
                                        üèä bis {{ proofValidUntil }}
                                    {% else %}
                                        ‚ùå Schwimm-Nachweis
                                    {% endif %}
                                </span>
                                <span class="badge bg-info text-dark total-points-badge" id="total-points-{{ p.ep_id }}">
                                    {{ totalPoints }} Pkt.
                                </span>
                            </div>
                            <small class="text-muted">{{ p.klasse }}</small>
                        </td>

                        {# ALTER #}
                        <td class="text-center">{{ p.age_year }}</td>

                        {# DISZIPLIN-SPALTEN #}
                        {% for category, items in disciplines %}
                            {% if category|trim|upper != 'SWIMMING' and category|trim|upper != 'SCHWIMMEN' %}
                                
                                {# Filter g√ºltige Disziplinen f√ºr diesen Teilnehmer #}
                                {% set options = [] %}
                                {% for d in items %}
                                    {% if d.geschlecht == p.gender and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                        {% set options = options|merge([d]) %}
                                    {% endif %}
                                {% endfor %}

                                {# Welche Disziplin ist aktuell gespeichert? #}
                                {% set selectedDiscId = null %}
                                {% for d in options %}
                                    {% if epResults[d.id] is defined %}
                                        {% set selectedDiscId = d.id %}
                                    {% endif %}
                                {% endfor %}
                                
                                {# Fallback auf die erste Option, falls nichts gew√§hlt #}
                                {% if selectedDiscId is null and options|length > 0 %}
                                    {% set selectedDiscId = options[0].id %}
                                {% endif %}

                                {# Resultat-Daten f√ºr das Dropdown & Input #}
                                {% set resObj = epResults[selectedDiscId] ?? null %}
                                {% set medalClass = resObj and resObj.stufe|lower in ['gold','silber','bronze'] ? 'medal-' ~ resObj.stufe|lower : '' %}

                                <td class="p-2 col-discipline text-center">
                                    {# Dropdown #}
                                    <select class="form-select form-select-sm discipline-selector mb-1 {{ medalClass }}"
                                            data-ep-id="{{ p.ep_id }}" data-type="discipline">
                                        {% for d in options %}
                                            <option value="{{ d.id }}" 
                                                    {% if selectedDiscId == d.id %}selected{% endif %}
                                                    data-is-swimming="{{ d.schwimmnachweis ? '1' : '0' }}">
                                                {{ d.name }}
                                            </option>
                                        {% endfor %}
                                    </select>

                                    {# Eingabefeld #}
                                    <input type="text" 
                                           class="form-control form-control-sm text-center fw-bold {{ medalClass }}"
                                           placeholder="---" 
                                           value="{{ resObj.leistung ?? '' }}"
                                           data-ep-id="{{ p.ep_id }}" 
                                           data-type="leistung"
                                           data-current-points="{{ resObj.points|default(0) }}">

                                    {# Anforderungen (Bronze/Silber/Gold) anzeigen #}
                                    <div class="req-hint d-flex justify-content-center gap-1 mt-1">
                                        {% for d in options %}
                                            {% if d.id == selectedDiscId %}
                                                <span class="badge border" style="background-color:#cd7f32; color:white" title="Bronze">{{ d.bronze }}</span>
                                                <span class="badge border bg-light text-dark" title="Silber">{{ d.silber }}</span>
                                                <span class="badge border bg-warning text-dark" title="Gold">{{ d.gold }}</span>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}