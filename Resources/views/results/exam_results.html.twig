{% extends '@IServCore/page.html.twig' %}

{% block title %}
    Ergebnisse ‚Äì {{ exam.exam_name }} ({{ exam.exam_year }})
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table-fixed-layout { table-layout: fixed !important; width: 100% !important; }
        .col-name { width: 250px; }
        .col-age  { width: 60px; }
        .col-discipline { width: 170px !important; }
        
        /* Medaillen-Farben */
        .medal-gold   { background-color: #ffd700 !important; color: #000 !important; border-color: #b8860b !important; }
        .medal-silber { background-color: #c0c0c0 !important; color: #000 !important; border-color: #808080 !important; }
        .medal-bronze { background-color: #cd7f32 !important; color: #fff !important; border-color: #8b4513 !important; }
        
        .req-hint { font-size: 0.7rem; color: #666; margin-top: 2px; }
        .discipline-selector { width: 100% !important; text-overflow: ellipsis; }
    </style>
{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>üèÖ {{ exam.exam_name }}</h2>
        <a href="{{ path('sportabzeichen_results_exams') }}" class="btn btn-outline-secondary">Zur√ºck</a>
    </div>

    {# Filter #}
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-auto"><strong>Klasse:</strong></div>
                <div class="col-auto">
                    <select name="class" class="form-select w-auto">
                        <option value="">(Alle)</option>
                        {% for c in classes %}
                            <option value="{{ c.klasse }}" {% if selectedClass == c.klasse %}selected{% endif %}>{{ c.klasse }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Filtern</button>
                </div>
            </form>
        </div>
    </div>

    <form id="autosave-form" 
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}"
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">

        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover table-bordered align-middle table-fixed-layout bg-white">
                <thead class="table-light text-center">
                    <tr>
                        <th class="col-name text-start">Name & Nachweise</th>
                        <th class="col-age">Alter</th>
                        {% for category, items in disciplines %}
                            {% if category|trim|upper != 'SWIMMING' and category|trim|upper != 'SCHWIMMEN' %}
                                <th class="col-discipline">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>

                <tbody>
                {% for p in participants %}
                    {% set epResults = results[p.ep_id] ?? {} %}
                    {% set totalPoints = 0 %}
                    {% set hasSwimmingProof = false %}
                    {% set birthYear = exam.exam_year - p.age_year %}

                    {# Vorberechnung f√ºr den initialen Seitenload #}
                    {% for dId, res in epResults %}
                        {% if res.kategorie|default('')|trim|upper != 'SWIMMING' and res.kategorie|default('')|trim|upper != 'SCHWIMMEN' %}
                            {% set totalPoints = totalPoints + (res.points|default(0)) %}
                        {% endif %}
                        {% if res.schwimmnachweis|default(false) and res.points|default(0) > 0 %}
                            {% set hasSwimmingProof = true %}
                        {% endif %}
                    {% endfor %}

                    {# JS ben√∂tigt data-ep-id und data-birth-year f√ºr die Schwimm-Validierung #}
                    <tr data-ep-id="{{ p.ep_id }}" data-birth-year="{{ birthYear }}">
                        <td>
                            <div class="fw-bold">{{ p.vorname }} {{ p.nachname }}</div>
                            <div class="my-1 d-flex flex-wrap gap-1">
                                {# Das JS sucht genau hier nach .badge.bg-success oder .badge.bg-danger #}
                                {% if hasSwimmingProof %}
                                    {% set validity = (p.age_year < 18) ? (birthYear + 18) : (exam.exam_year + 5) %}
                                    <span class="badge bg-success" style="font-size: 0.65rem;">üèä bis {{ validity }}</span>
                                {% else %}
                                    <span class="badge bg-danger" style="font-size: 0.65rem;">‚ùå Schwimm-Nachweis</span>
                                {% endif %}
                                
                                <span class="badge bg-info text-dark" id="total-points-{{ p.ep_id }}" style="font-size: 0.65rem;">
                                    {{ totalPoints }} Pkt.
                                </span>
                            </div>
                            <small class="text-muted">{{ p.klasse }}</small>
                        </td>

                        <td class="text-center">{{ p.age_year }}</td>

                        {% for category, items in disciplines %}
                            {% if category|trim|upper != 'SWIMMING' and category|trim|upper != 'SCHWIMMEN' %}
                                {% set options = [] %}
                                {% for d in items %}
                                    {% if d.geschlecht == p.gender and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                        {% set options = options|merge([d]) %}
                                    {% endif %}
                                {% endfor %}

                                {% set selectedId = null %}
                                {% for d in options %}
                                    {% if epResults[d.id] is defined %}{% set selectedId = d.id %}{% endif %}
                                {% endfor %}
                                {% if selectedId is null and options|length > 0 %}
                                    {% set selectedId = options[0].id %}
                                {% endif %}

                                {% set resObj = epResults[selectedId] ?? null %}
                                {% set mClass = (resObj and resObj.stufe|lower in ['gold','silber','bronze']) ? 'medal-' ~ resObj.stufe|lower : '' %}

                                <td class="p-2 col-discipline text-center">
                                    <select class="form-select form-select-sm discipline-selector mb-1 {{ mClass }}" 
                                            data-save data-ep-id="{{ p.ep_id }}" data-type="discipline">
                                        <option value="">(keine)</option>
                                        {% for d in options %}
                                            <option value="{{ d.id }}" 
                                                    {% if selectedId == d.id %}selected{% endif %}
                                                    data-is-swimming="{{ d.schwimmnachweis ? '1' : '0' }}">
                                                {{ d.name }}
                                            </option>
                                        {% endfor %}
                                    </select>

                                    <input type="text" class="form-control form-control-sm text-center fw-bold {{ mClass }}"
                                           placeholder="---" value="{{ resObj.leistung ?? '' }}"
                                           data-save data-ep-id="{{ p.ep_id }}" data-type="leistung"
                                           data-current-points="{{ resObj.points|default(0) }}">

                                    <div class="req-hint d-flex justify-content-center gap-1">
                                        {% for d in options %}
                                            {% if d.id == selectedId %}
                                                <span class="badge border" style="background-color:#cd7f32; color:#fff" title="Bronze">{{ d.bronze }}</span>
                                                <span class="badge border bg-light text-dark" title="Silber">{{ d.silber }}</span>
                                                <span class="badge border bg-warning text-dark" title="Gold">{{ d.gold }}</span>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}