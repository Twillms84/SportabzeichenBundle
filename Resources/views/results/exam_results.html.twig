{% extends '@IServCore/page.html.twig' %}

{% block title %}Ergebnisse ‚Äì {{ exam.exam_name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table-fixed-layout { table-layout: fixed !important; width: 100% !important; }
        .col-name { width: 250px; }
        .col-age  { width: 60px; }
        .col-discipline { width: 160px !important; }
        .discipline-selector { width: 100% !important; text-overflow: ellipsis; }
        .medal-gold   { background-color: #ffd700 !important; color: #000 !important; }
        .medal-silber { background-color: #c0c0c0 !important; color: #000 !important; }
        .medal-bronze { background-color: #cd7f32 !important; color: #fff !important; }
        .req-hint { font-size: 0.7rem; color: #666; margin-top: 2px; }
    </style>
{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h2>üèÖ {{ exam.exam_name }} ({{ exam.exam_year }})</h2>
        <a href="{{ path('sportabzeichen_results_exams') }}" class="btn btn-outline-secondary">Zur√ºck</a>
    </div>

    {# Filter #}
    <div class="card mb-3 shadow-sm"><div class="card-body">
        <form method="get" class="row g-2 align-items-center">
            <div class="col-auto"><strong>Klasse:</strong></div>
            <div class="col-auto">
                <select name="class" class="form-select w-auto">
                    <option value="">(Alle)</option>
                    {% for c in classes %}<option value="{{ c.klasse }}" {% if selectedClass == c.klasse %}selected{% endif %}>{{ c.klasse }}</option>{% endfor %}
                </select>
            </div>
            <div class="col-auto"><button type="submit" class="btn btn-primary">Filtern</button></div>
        </form>
    </div></div>

    <form id="autosave-form" data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}">
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle table-fixed-layout bg-white">
                <thead class="table-light text-center">
                    <tr>
                        <th class="col-name text-start">Name & Nachweise</th>
                        <th class="col-age">Alter</th>
                        {% for category, items in disciplines %}
                            {% if category|trim|upper != 'SWIMMING' and category|trim|upper != 'SCHWIMMEN' %}
                                <th class="col-discipline">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                {% for p in participants %}
                    {% set epResults = results[p.ep_id] ?? {} %}
                    {% set totalPoints = 0 %}
                    
                    {# Vorberechnung Punkte #}
                    {% for dId, res in epResults %}
                        {% if res.kategorie|default('')|trim|upper != 'SWIMMING' %}
                            {% set totalPoints = totalPoints + (res.points|default(0)) %}
                        {% endif %}
                    {% endfor %}

                    <tr>
                        <td class="name-container">
                            <div class="fw-bold">{{ p.vorname }} {{ p.nachname }}</div>
                            <div class="d-flex gap-1 mt-1">
                                <span class="badge bg-info text-dark" id="total-points-{{ p.ep_id }}">{{ totalPoints }} Pkt.</span>
                                <small class="text-muted">{{ p.klasse }}</small>
                            </div>
                        </td>
                        <td class="text-center">{{ p.age_year }}</td>

                        {% for category, items in disciplines %}
                            {% if category|trim|upper != 'SWIMMING' and category|trim|upper != 'SCHWIMMEN' %}
                                {% set options = [] %}
                                {% for d in items %}
                                    {% if d.geschlecht == p.gender and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                        {% set options = options|merge([d]) %}
                                    {% endif %}
                                {% endfor %}

                                {% set selectedId = null %}
                                {% for d in options %}{% if epResults[d.id] is defined %}{% set selectedId = d.id %}{% endif %}{% endfor %}
                                {% if selectedId is null and options|length > 0 %}{% set selectedId = options[0].id %}{% endif %}

                                {% set resObj = epResults[selectedId] ?? null %}
                                {% set mClass = (resObj and resObj.stufe|lower in ['gold','silber','bronze']) ? 'medal-' ~ resObj.stufe|lower : '' %}

                                <td class="p-2 text-center">
                                    <select class="form-select form-select-sm mb-1 {{ mClass }}" data-save data-ep-id="{{ p.ep_id }}" data-type="discipline">
                                        {% for d in options %}
                                            <option value="{{ d.id }}" {% if selectedId == d.id %}selected{% endif %}>{{ d.name }}</option>
                                        {% endfor %}
                                    </select>
                                    <input type="text" class="form-control form-control-sm text-center fw-bold {{ mClass }}" 
                                           value="{{ resObj.leistung ?? '' }}" data-save data-ep-id="{{ p.ep_id }}" 
                                           data-type="leistung" data-current-points="{{ resObj.points|default(0) }}" placeholder="---">
                                    
                                    <div class="req-hint d-flex justify-content-center gap-1">
                                        {% for d in options %}{% if d.id == selectedId %}
                                            <span class="badge border" style="background-color:#cd7f32;color:#fff">{{ d.bronze }}</span>
                                            <span class="badge border bg-light text-dark">{{ d.silber }}</span>
                                            <span class="badge border bg-warning text-dark">{{ d.gold }}</span>
                                        {% endif %}{% endfor %}
                                    </div>
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}