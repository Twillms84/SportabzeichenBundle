{% extends '@IServCore/page.html.twig' %}

{% block title %}
    Ergebnisse ‚Äì {{ exam.exam_name }} ({{ exam.exam_year }})
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Hier binden wir dein CSS ein, falls es in einer Datei liegt, oder f√ºgen es direkt ein #}
    <style>
        /* Dein bereitgestelltes CSS */
        .table-results-compact { table-layout: fixed !important; width: 100% !important; font-size: 1rem !important; }
        .col-name { width: 220px; } 
        .col-class { width: 70px; }  
        .col-discipline { width: 130px !important; }

        .medal-gold   { background-color: #ffd700 !important; color: #000 !important; border: 1px solid #b8860b !important; }
        .medal-silber { background-color: #e0e0e0 !important; color: #000 !important; border: 1px solid #a0a0a0 !important; }
        .medal-bronze { background-color: #cd7f32 !important; color: #fff !important; border: 1px solid #8b4513 !important; }
        .medal-none { background-color: unset !important; color: unset !important; font-weight: normal !important; }

        .discipline-selector option { background-color: #fff; color: #000; font-weight: normal; }
        .discipline-selector, .form-control-custom { font-size: 1rem !important; padding: 4px 4px !important; width: 100% !important; }

        .req-hint { 
            font-size: 0.9rem !important; font-weight: 700 !important; display: flex; 
            justify-content: space-between; padding: 2px 6px 0 6px; margin-top: 2px; border-top: 1px solid #eee;
        }
        .req-bronze { color: #8b4513 !important; }
        .req-silber { color: #666 !important; }
        .req-gold   { color: #a67c00 !important; }

        .badge-result { cursor: help; font-size: 0.85rem; padding: 5px 7px; }
    </style>
{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>üèÖ {{ exam.exam_name }}</h2>
        <a href="{{ path('sportabzeichen_results_exams') }}" class="btn btn-outline-secondary btn-sm">Zur√ºck</a>
    </div>

    <form id="autosave-form" 
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}"
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">

        <div class="table-responsive shadow-sm">
            {# Nutzt jetzt .table-results-compact aus deinem CSS #}
            <table class="table table-hover table-bordered align-middle table-results-compact bg-white">
                <thead class="table-light text-center">
                    <tr>
                        <th class="col-name text-start">Teilnehmer</th>
                        <th class="col-class text-center">Alter</th>
                        {% for category, items in disciplines %}
                            {% if category|trim|upper != 'SWIMMING' and category|trim|upper != 'SCHWIMMEN' %}
                                <th class="col-discipline">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>

                <tbody>
                {% for p in participants %}
                    {% set epResults = results[p.ep_id] ?? {} %}
                    {% set totalPoints = 0 %}
                    {% set hasSwimmingProof = false %}
                    {% set birthYear = exam.exam_year - p.age_year %}

                    {# Vorberechnung f√ºr Badges & Punkte #}
                    {% for dId, resData in epResults %}
                        {% if resData.kategorie|default('')|trim|upper != 'SWIMMING' and resData.kategorie|default('')|trim|upper != 'SCHWIMMEN' %}
                            {% set totalPoints = totalPoints + (resData.points|default(0)) %}
                        {% endif %}
                        {% if resData.schwimmnachweis|default(false) and resData.points|default(0) > 0 %}
                            {% set hasSwimmingProof = true %}
                        {% endif %}
                    {% endfor %}

                    <tr data-ep-id="{{ p.ep_id }}" data-birth-year="{{ birthYear }}">
                        <td>
                            <div class="fw-bold">{{ p.vorname }} {{ p.nachname }}</div>
                            <div class="my-1 d-flex flex-wrap gap-1">
                                {% if hasSwimmingProof %}
                                    {% set validity = (p.age_year < 18) ? (birthYear + 18) : (exam.exam_year + 5) %}
                                    <span class="badge bg-success badge-result">üèä bis {{ validity }}</span>
                                {% else %}
                                    <span class="badge bg-danger badge-result">‚ùå Nachweis</span>
                                {% endif %}
                                <span class="badge bg-info text-dark badge-result" id="total-points-{{ p.ep_id }}">
                                    {{ totalPoints }} Pkt.
                                </span>
                            </div>
                        </td>

                        <td class="text-center">{{ p.age_year }}</td>

                        {% for category, items in disciplines %}
                            {% if category|trim|upper != 'SWIMMING' and category|trim|upper != 'SCHWIMMEN' %}
                                {% set options = [] %}
                                {% for d in items %}
                                    {% if d.geschlecht == p.gender and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                        {% set options = options|merge([d]) %}
                                    {% endif %}
                                {% endfor %}

                                {% set selectedId = null %}
                                {% for d in options %}
                                    {% if epResults[d.id] is defined %}{% set selectedId = d.id %}{% endif %}
                                {% endfor %}
                                {% if selectedId is null and options|length > 0 %}
                                    {% set selectedId = options[0].id %}
                                {% endif %}

                                {% set resObj = epResults[selectedId] ?? null %}
                                {% set mClass = (resObj and resObj.stufe|lower in ['gold','silber','bronze']) ? 'medal-' ~ resObj.stufe|lower : 'medal-none' %}

                                <td class="p-1 col-discipline text-center">
                                    {# Select mit .discipline-selector #}
                                    <select class="form-select discipline-selector mb-1 {{ mClass }}" 
                                            data-save data-ep-id="{{ p.ep_id }}" data-type="discipline">
                                        <option value="">(keine)</option>
                                        {% for d in options %}
                                            <option value="{{ d.id }}" {% if selectedId == d.id %}selected{% endif %}
                                                    data-is-swimming="{{ d.schwimmnachweis ? '1' : '0' }}">
                                                {{ d.name }}
                                            </option>
                                        {% endfor %}
                                    </select>

                                    {# Input mit .form-control-custom #}
                                    <input type="text" class="form-control form-control-custom text-center fw-bold {{ mClass }}"
                                           placeholder="---" value="{{ resObj.leistung ?? '' }}"
                                           data-save data-ep-id="{{ p.ep_id }}" data-type="leistung"
                                           data-current-points="{{ resObj.points|default(0) }}">

                                    {# Anforderungs-Werte mit deinen neuen Klassen #}
                                    <div class="req-hint">
                                        {% for d in options if d.id == selectedId %}
                                            <span class="req-bronze" title="Bronze">{{ d.bronze }}</span>
                                            <span class="req-silber" title="Silber">{{ d.silber }}</span>
                                            <span class="req-gold" title="Gold">{{ d.gold }}</span>
                                        {% endfor %}
                                    </div>
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}