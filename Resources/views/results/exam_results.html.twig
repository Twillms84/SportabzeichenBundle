{% extends '@IServCore/page.html.twig' %}

{% block title %}
    Ergebnisse eingeben ‚Äì {{ exam.exam_name }} ({{ exam.exam_year }})
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sportabzeichen_results.css', 'pulsr-sportabzeichen') }}">
{% endblock %}

{% block content %}
<div class="container-fluid mt-3">
    <h2 class="mb-3">üèÖ Ergebnisse: {{ exam.exam_name }}</h2>

    {# Filter #}
    <div class="card mb-3 shadow-sm">
        <div class="card-body py-2">
            <form method="get" class="row g-2 align-items-center">
                <div class="col-auto"><label class="small fw-bold">Klasse:</label></div>
                <div class="col-auto">
                    <select name="class" class="form-select form-select-sm w-auto">
                        <option value="">(Alle)</option>
                        {% for c in classes %}
                            <option value="{{ c.klasse }}" {% if selectedClass == c.klasse %}selected{% endif %}>{{ c.klasse }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-sm btn-primary">Filtern</button>
                    <a href="{{ path('sportabzeichen_results_index', {examId: exam.id}) }}" class="btn btn-sm btn-outline-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <form id="autosave-form" 
        data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}" 
        data-global-token="{{ csrf_token('sportabzeichen_result_save') }}"
        data-exam-id="{{ exam.id }}">

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle table-results-compact" id="results-table">
                <thead class="table-dark">
                    <tr>
                        <th class="col-name">Name (Alter)</th>
                        <th class="col-class text-center">Klasse</th>
                        {% for category, items in disciplines %}
                            {% if category|trim|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                <th class="text-center col-discipline">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for p in participants %}
                        <tr data-ep-id="{{ p.ep_id }}">
                            <td class="name-container">
                                <div class="fw-bold">{{ p.vorname }} {{ p.nachname }} ({{ p.age_year }})</div>
                                <div class="d-flex gap-1 mt-1">
                                    {# WICHTIG: Hier p.total_points oder √§hnliches nutzen, falls vorhanden #}
                                    <span class="badge bg-info text-dark fw-bold" id="total-points-{{ p.ep_id }}">
                                        {{ p.total_points|default(0) }} Pkt.
                                    </span>
                                </div>
                            </td>
                            <td class="text-center fw-bold">{{ p.klasse }}</td>

                            {% for category, items in disciplines %}
                                {% if category|trim|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                    {# 1. VARIABLEN INITIALISIEREN #}
                                    {% set options = [] %}
                                    {% set selectedDiscId = null %}
                                    {% set selectedValue = '' %}
                                    {% set medalClass = 'medal-none' %}
                                    {% set currentReq = null %}

                                    {# 2. Disziplinen filtern #}
                                    {% for d in items %}
                                        {% if d.geschlecht == p.gender and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                            {% set options = options|merge([d]) %}
                                        {% endif %}
                                    {% endfor %}

                                    {# 3. Ergebnis suchen (Sicherheitscheck mit 'is defined' und 'iterable') #}
                                    {% if epResults is defined and epResults is iterable %}
                                        {% for d in options %}
                                            {% if epResults[d.id] is defined and epResults[d.id] is not null %}
                                                {% set selectedDiscId = d.id %}
                                                {% set currentReq = d %}
                                                {% set selectedValue = epResults[d.id].leistung %}
                                                {% set stufe = epResults[d.id].stufe|default('none')|lower %}
                                                {% if stufe in ['gold', 'silber', 'bronze'] %}
                                                    {% set medalClass = 'medal-' ~ stufe %}
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}

                                    {# 4. Fallback auf erste Disziplin #}
                                    {% if selectedDiscId is null and options|length > 0 %}
                                        {% set selectedDiscId = options[0].id %}
                                        {% set currentReq = options[0] %}
                                    {% endif %}

                                    <td class="p-1 col-discipline text-center">
                                        <select name="results[{{ p.ep_id }}][{{ category }}][discipline]" 
                                                class="form-select discipline-selector mb-1 {{ medalClass }}" 
                                                data-save
                                                data-participant="{{ p.ep_id }}">
                                            <option value="">-</option>
                                            {% for d in options %}
                                                <option value="{{ d.id }}" 
                                                        {% if selectedDiscId == d.id %}selected{% endif %}>
                                                    {{ d.name }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                        
                                        <input type="text" 
                                            name="results[{{ p.ep_id }}][{{ category }}][leistung]" 
                                            class="form-control form-control-custom fw-bold leistung-input {{ medalClass }}" 
                                            value="{{ selectedValue }}" 
                                            placeholder="---" 
                                            data-save
                                            data-participant="{{ p.ep_id }}">
                                    </td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}