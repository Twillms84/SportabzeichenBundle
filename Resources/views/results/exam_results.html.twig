{% extends '@IServCore/page.html.twig' %}

{% block title %}
    Ergebnisse eingeben ‚Äì {{ exam.exam_name }} ({{ exam.exam_year }})
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sportabzeichen_results.css', 'pulsr-sportabzeichen') }}">
{% endblock %}

{% block content %}
<div class="container-fluid mt-3">
    <h2 class="mb-3">üèÖ Ergebnisse: {{ exam.exam_name }}</h2>

    {# Filter schmal halten #}
    <div class="card mb-3 shadow-sm">
        <div class="card-body py-2">
            <form method="get" class="row g-2 align-items-center">
                <div class="col-auto"><label class="small fw-bold">Klasse:</label></div>
                <div class="col-auto">
                    <select name="class" class="form-select form-select-sm w-auto">
                        <option value="">(Alle)</option>
                        {% for c in classes %}
                            <option value="{{ c.klasse }}" {% if selectedClass == c.klasse %}selected{% endif %}>{{ c.klasse }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-sm btn-primary">Filtern</button>
                </div>
            </form>
        </div>
    </div>

    <form id="autosave-form" data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}" data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">
        <div class="table-responsive">
            <table class="table table-sm table-bordered align-middle table-results-compact">
                <thead class="table-dark">
                    <tr>
                        <th class="col-name">Name</th>
                        <th class="col-age text-center">Alt.</th>
                        {% for category, items in disciplines %}
                            {% if category|trim|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                <th class="text-center col-discipline">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                {% for p in participants %}
                    {% set epResults = results[p.ep_id] ?? {} %}
                    {% set totalPoints = 0 %}
                    {% set hasSwimmingProof = false %}
                    
                    {# Schwimm-Logik & Punkte vorab berechnen #}
                    {% for resId, resData in epResults %}
                        {% if resData.kategorie|default('')|trim|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                            {% set totalPoints = totalPoints + (resData.points|default(0)) %}
                        {% endif %}
                        {% if resData.schwimmnachweis|default(false) and resData.points|default(0) > 0 %}
                            {% set hasSwimmingProof = true %}
                        {% endif %}
                    {% endfor %}

                    <tr data-ep-id="{{ p.ep_id }}">
                        <td class="name-container">
                            <div class="fw-bold text-truncate">{{ p.vorname }} {{ p.nachname }}</div>
                            <div class="d-flex gap-1 mt-1">
                                <span class="badge {{ hasSwimmingProof ? 'bg-success' : 'bg-danger' }} badge-fixed">
                                    {{ hasSwimmingProof ? 'üèä' : '‚ùå' }}
                                </span>
                                <span class="badge bg-info text-dark badge-fixed fw-bold" id="total-points-{{ p.ep_id }}">
                                    {{ totalPoints }} Pkt.
                                </span>
                            </div>
                        </td>
                        <td class="text-center">{{ p.age_year }}</td>

                        {% for category, items in disciplines %}
                            {% if category|trim|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                {% set options = [] %}
                                {% for d in items %}
                                    {% if d.geschlecht == p.gender and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                        {% set options = options|merge([d]) %}
                                    {% endif %}
                                {% endfor %}

                                {% set selectedDiscId = null %}
                                {% for d in options %}
                                    {% if epResults[d.id] is defined %}{% set selectedDiscId = d.id %}{% endif %}
                                {% endfor %}
                                {% if selectedDiscId is null and options|length > 0 %}{% set selectedDiscId = options[0].id %}{% endif %}

                                {% set selectedValue = '' %}
                                {% set medalClass = 'medal-none' %}
                                {% set currentReq = null %}
                                
                                {% for d in options %}
                                    {% if d.id == selectedDiscId %}{% set currentReq = d %}{% endif %}
                                {% endfor %}

                                {% if selectedDiscId and epResults[selectedDiscId] is defined %}
                                    {% set stufe = epResults[selectedDiscId].stufe|default('none')|lower %}
                                    {% set selectedValue = epResults[selectedDiscId].leistung %}
                                    {% if stufe in ['gold', 'silber', 'bronze'] %}{% set medalClass = 'medal-' ~ stufe %}{% endif %}
                                {% endif %}

                                <td class="p-1 col-discipline">
                                    <select name="results[{{ p.ep_id }}][{{ category }}][discipline]" 
                                            class="form-select form-select-sm discipline-selector mb-1 {{ medalClass }}" data-save>
                                        <option value="">-</option>
                                        {% for d in options %}
                                            <option value="{{ d.id }}" {% if selectedDiscId == d.id %}selected{% endif %}>{{ d.name }}</option>
                                        {% endfor %}
                                    </select>
                                    <input type="text" name="results[{{ p.ep_id }}][{{ category }}][leistung]" 
                                           class="form-control form-control-sm text-center fw-bold {{ medalClass }}" 
                                           value="{{ selectedValue }}" placeholder="Ergebnis" data-save>
                                    
                                    {% if currentReq %}
                                        <div class="req-hint">
                                            <span class="text-bronze">{{ currentReq.bronze }}</span>
                                            <span class="text-muted">{{ currentReq.silber }}</span>
                                            <span class="text-warning">{{ currentReq.gold }}</span>
                                        </div>
                                    {% endif %}
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}