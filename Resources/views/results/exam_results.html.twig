{% extends '@IServCore/page.html.twig' %}

{# Zugriff auf Exam Entity Eigenschaften: exam.name statt exam.exam_name #}
{% block title %}Ergebnisse ‚Äì {{ exam.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sportabzeichen_results.css', 'pulsr-sportabzeichen') }}">
{% endblock %}

{% block content %}

{# --- MAPPING F√úR EINHEITEN --- #}
{% set unitMap = {
    'UNIT_METERS': 'm',
    'UNIT_CENTIMETERS': 'cm',
    'UNIT_SECONDS': 'Sek.',
    'UNIT_MINUTES': 'Min.',
    'UNIT_HOURS': 'Std.',
    'UNIT_NUMBER': 'Anz.'
} %}

{# --- PR√úFUNG: Gibt es √ºberhaupt Schwimmen in den Disziplinen? --- #}
{# Wir iterieren √ºber die Keys des Arrays, das der Controller √ºbergibt #}
{% set hasSwimmingCategory = false %}
{% for cat in disciplines|keys %}
    {% if cat|upper in ['SWIMMING', 'SCHWIMMEN'] %}
        {% set hasSwimmingCategory = true %}
    {% endif %}
{% endfor %}

<div class="container-fluid mt-3">
    
    {# --- HEADER & TOOLS --- #}
    <div class="d-flex justify-content-between align-items-center mb-3">
        {# Entity: exam.name, exam.year #}
        <h4>üèÖ {{ exam.examName }} ({{ exam.examYear }})</h4>
        
        <div class="d-flex gap-2 align-items-center">
            
            {# Ansicht: Spalten ein/ausblenden #}
            <div class="dropdown">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    {{ icon('eye')|raw }} Ansicht
                </button>
                <ul class="dropdown-menu">
                    {% for category in disciplines|keys %}
                        {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                            <li>
                                <div class="dropdown-item">
                                    <div class="form-check">
                                        <input class="form-check-input js-col-toggle" type="checkbox" 
                                               value="{{ category }}" 
                                               id="check-{{ category }}" 
                                               data-category="{{ category }}" 
                                               checked>
                                        <label class="form-check-label" for="check-{{ category }}">{{ category }}</label>
                                    </div>
                                </div>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>

            {# FILTER: Klasse #}
            {% if classes|length > 0 %}
                <form method="get" class="d-flex gap-1 align-items-center">
                    <input type="hidden" name="sort" value="{{ app.request.query.get('sort') }}">
                    <input type="hidden" name="order" value="{{ app.request.query.get('order') }}">
                    
                    <select name="class" class="form-select form-select-sm" style="width: auto;">
                        <option value="">Alle Klassen</option>
                        <select name="class" class="form-select" onchange="this.form.submit()">
                            <option value="">Alle Klassen</option>
                            {% for c in classes %}
                                <option value="{{ c }}" {% if c == selectedClass %}selected{% endif %}>
                                    {{ c }}
                                </option>
                            {% endfor %}
                        </select>
                    </select>
                    <button type="submit" class="btn btn-primary btn-sm">
                        {{ icon('filter')|raw }} Filter
                    </button>
                </form>
            {% endif %}
            
            {# --- BUTTON: DRUCKEN --- #}
            <a href="{{ path('sportabzeichen_results_print_groupcard', {'examId': exam.id, 'class': app.request.query.get('class')}) }}" 
               class="btn btn-default btn-sm" 
               target="_blank" 
               title="Gruppenpr√ºfkarte drucken">
                {{ icon('print')|raw }} Drucken
            </a>
            
            <a href="{{ path('sportabzeichen_exams_dashboard') }}" class="btn btn-outline-secondary btn-sm">Zur√ºck</a>
        </div>
    </div>

    {# --- HAUPTTABELLE --- #}
    <form id="autosave-form" 
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}"
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">

        <div class="table-responsive">
            <table class="table table-sm table-bordered table-results-compact align-middle">
                <thead class="table-light text-center align-middle">
                    <tr>
                        {# SORTIERBARE SPALTE: TEILNEHMER #}
                        <th class="col-name text-start">
                            {% set currentSort = app.request.query.get('sort', 'lastname') %}
                            {% set currentOrder = app.request.query.get('order', 'asc') %}
                            
                            {% if currentSort == 'lastname' and currentOrder == 'asc' %}
                                {% set nextOrder = 'desc' %}
                                {% set sortIcon = icon('arrow-down') %}
                            {% elseif currentSort == 'lastname' and currentOrder == 'desc' %}
                                {% set nextOrder = 'asc' %}
                                {% set sortIcon = icon('arrow-up') %}
                            {% else %}
                                {% set nextOrder = 'asc' %}
                                {% set sortIcon = '' %}
                            {% endif %}

                            {# HIER WAR DER FEHLER: 'examId' muss 'id' hei√üen #}
                            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({
                                'id': exam.id, 
                                'sort': 'lastname', 
                                'order': nextOrder
                            })) }}" 
                            class="sort-header d-flex justify-content-between align-items-center text-dark">
                                <span>Teilnehmer</span>
                                <span>{{ sortIcon|raw }}</span>
                            </a>
                        </th>

                        {# DISZIPLIN HEADERS #}
                        {% for category in disciplines|keys %}
                            {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                <th class="col-discipline col-cat-{{ category }}">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                {# p ist jetzt ein ExamParticipant Entity #}
                {% for p in participants %}
                    {# results ist immer noch ein Array, keyed by ep_id. Zugriff via p.id #}
                    {% set epResults = results[p.id] ?? {} %}
                    
                    <tr data-ep-id="{{ p.id }}" id="row-{{ p.id }}">
                        
                        {# 1. NAME, KLASSE & INFO #}
                        <td class="col-name py-2">
                            <div class="name-container">
                                {# Entity Zugriff: p.participant.firstname #}
                                <span class="name-main fw-bold">{{ p.participant.firstname }} {{ p.participant.lastname }}</span>
                                {# Entity Zugriff: p.age (muss im Entity als getAge() existieren oder berechnet werden) #}
                                <span class="name-age text-muted">({{ p.age }})</span>
                            </div>
                            
                            <div class="small text-muted mb-2">
                                Klasse: <span class="text-dark fw-semibold">{{ p.participant.studentClass|default('-') }}</span>
                            </div>
                            
                            <div class="d-flex flex-column gap-1">
                                {# Punkte & Medaille #}
                                <div class="d-flex gap-1 align-items-center">
                                    <span class="badge bg-light text-dark border badge-mini" id="total-points-{{ p.id }}">
                                        {# Entity Zugriff: p.totalPoints #}
                                        <span class="pts-val fw-bold">{{ p.totalPoints|default(0) }}</span> Pkt.
                                    </span>
                                    
                                    <span class="badge badge-mini js-medal-badge" 
                                          id="final-medal-{{ p.id }}"
                                          data-medal="{{ p.totalMedal|default('') }}"
                                          style="display: {{ p.totalMedal ? 'inline-block' : 'none' }}">
                                        {{ p.totalMedal }}
                                    </span>
                                </div>

                                {# NEU: Manueller Schwimmnachweis Switch #}
                                {% if hasSwimmingCategory %}
                                    <div class="mt-1">
                                        <div class="form-check form-switch d-flex align-items-center ps-0 gap-2">
                                            {# Entity Zugriff: p.swimmingCertificate (boolean) #}
                                            <input class="form-check-input ms-0" type="checkbox" role="switch"
                                                   id="swim-switch-{{ p.id }}"
                                                   {{ p.swimmingCertificate ? 'checked' : '' }}
                                                   data-save 
                                                   data-ep-id="{{ p.id }}" 
                                                   data-type="swimming"
                                                   style="cursor: pointer;">
                                                    
                                            <label class="form-check-label small fw-semibold {{ p.swimmingCertificate ? 'text-success' : 'text-danger' }}" 
                                                   for="swim-switch-{{ p.id }}"
                                                   id="swimming-label-{{ p.id }}">
                                                {{ p.swimmingCertificate ? 'Schwimmen: OK' : 'Schwimmen: Fehlt' }}
                                            </label>
                                        </div>
                                        
                                        {# Optional: Ablaufdatum anzeigen, falls vorhanden #}
                                        {# Entity Zugriff: p.swimmingCertificateValidUntil #}
                                        {% if p.swimmingCertificateValidUntil and p.swimmingCertificate %}
                                            <div class="small text-muted fst-italic ms-1" style="font-size: 0.75rem;">
                                                G√ºltig bis: {{ p.swimmingCertificateValidUntil|date('d.m.Y') }}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </div>
                        </td>

                        {# 3. DISZIPLINEN #}
                        {# items ist hier eine Liste von REQUIREMENT Entities #}
                        {% for category, items in disciplines %}
                            {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                
                                {% set options = [] %}
                                {# Gender Logic: Entity speichert wahrscheinlich 'MALE'/'FEMALE' #}
                                {% set pGender = p.participant.gender %} 
                                
                                {% for req in items %}
                                    {# req ist Requirement Entity. req.discipline ist Discipline Entity #}
                                    {# Wir pr√ºfen: Geschlecht, MinAge, MaxAge #}
                                    {% if req.gender == pGender and p.age >= req.minAge and p.age <= req.maxAge %}
                                        {% set options = options|merge([req]) %}
                                    {% endif %}
                                {% endfor %}

                                {% set selectedId = null %}
                                {# Wir pr√ºfen, ob wir f√ºr diese DisciplineID schon ein Result haben #}
                                {% for req in options %}
                                    {# req.discipline.id ist der Key im Results Array (dieses Mapping musst du im Controller sicherstellen!) #}
                                    {% if req.discipline.id in epResults|keys %}
                                        {% set selectedId = req.discipline.id %}
                                    {% endif %}
                                {% endfor %}
                                
                                {# Fallback: Erste Option w√§hlen #}
                                {% if selectedId is null and options|length > 0 %}
                                    {% set selectedId = options[0].discipline.id %}
                                {% endif %}
                                
                                {% set resObj = epResults[selectedId] ?? null %}
                                {# result.score ist die Stufe (Gold/Silver/Bronze) #}
                                {% set mClass = (resObj and resObj.score|lower in ['gold','silber','bronze']) ? 'medal-' ~ resObj.score|lower : 'medal-none' %}

                                <td class="p-1 col-discipline col-cat-{{ category }}">
                                    <div class="d-flex flex-column">
                                        <select class="discipline-selector js-discipline-select mb-1 {{ mClass }}" 
                                                data-save data-ep-id="{{ p.id }}" data-type="discipline" data-kategorie="{{ category }}">
                                            {% if options is empty %}
                                                <option value="">--</option>
                                            {% else %}
                                                {% for req in options %}
                                                    {# req ist Requirement Entity #}
                                                    {% set cleanUnit = unitMap[req.discipline.unit] ?? req.discipline.unit %}
                                                    
                                                    {# value ist die Discipline ID, nicht die Requirement ID #}
                                                    <option value="{{ req.discipline.id }}" 
                                                            {{ selectedId == req.discipline.id ? 'selected' : '' }}
                                                            data-unit="{{ cleanUnit }}"
                                                            data-bronze="{{ req.valueBronze }}"
                                                            data-silber="{{ req.valueSilver }}"
                                                            data-gold="{{ req.valueGold }}">
                                                        {{ req.discipline.name }}
                                                    </option>
                                                {% endfor %}
                                            {% endif %}
                                        </select>

                                        <div class="input-group input-group-sm">
                                            {# resObj.value ist der Wert (die Leistung) #}
                                            <input type="text" class="form-control form-control-custom {{ mClass }}"
                                                   value="{{ resObj.value ?? '' }}"
                                                   data-save data-ep-id="{{ p.id }}" data-type="leistung" data-kategorie="{{ category }}">
                                        </div>

                                        <div class="req-hint">
                                            <span class="req-val-b" title="Bronze">B:<span class="js-val-b">-</span></span>
                                            <span class="req-val-s" title="Silber">S:<span class="js-val-s">-</span></span>
                                            <span class="req-val-g" title="Gold">G:<span class="js-val-g">-</span></span>
                                        </div>
                                    </div>
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
    <script>
        document.addEventListener('change', function(e) {
            if (e.target.matches('[data-type="swimming"]')) {
                const epId = e.target.getAttribute('data-ep-id');
                const label = document.getElementById('swimming-label-' + epId);
                if (label) {
                    if (e.target.checked) {
                        label.textContent = 'Schwimmen: OK';
                        label.classList.remove('text-danger');
                        label.classList.add('text-success');
                    } else {
                        label.textContent = 'Schwimmen: Fehlt';
                        label.classList.remove('text-success');
                        label.classList.add('text-danger');
                    }
                }
            }
        });
    </script>
{% endblock %}