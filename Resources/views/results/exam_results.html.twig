{% extends '@IServCore/page.html.twig' %}

{% block title %}
    Ergebnisse eingeben ‚Äì {{ exam.exam_name }} ({{ exam.exam_year }})
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sportabzeichen_results.css', 'pulsr-sportabzeichen') }}">
{% endblock %}

{% block content %}
<div class="container-fluid mt-3">
    <h2 class="mb-3">üèÖ Ergebnisse: {{ exam.exam_name }}</h2>

    {# Filter-Sektion #}
    <div class="card mb-3 shadow-sm">
        <div class="card-body py-2">
            <form method="get" class="row g-2 align-items-center">
                <div class="col-auto"><label class="small fw-bold">Klasse:</label></div>
                <div class="col-auto">
                    <select name="class" class="form-select form-select-sm w-auto">
                        <option value="">(Alle)</option>
                        {% for c in classes %}
                            <option value="{{ c.klasse }}" {% if selectedClass == c.klasse %}selected{% endif %}>{{ c.klasse }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-sm btn-primary">Filtern</button>
                    <a href="{{ path('sportabzeichen_results_index', {examId: exam.id}) }}" class="btn btn-sm btn-outline-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <form id="autosave-form" 
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}" 
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">
        
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle table-results-compact">
                <thead class="table-dark">
                    <tr>
                        <th class="col-name">Name</th>
                        <th class="col-age text-center">Alt.</th>
                        {% for category, items in disciplines %}
                            {% if category|trim|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                <th class="text-center col-discipline">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for p in participants %}
                        {% set epResults = results[p.ep_id] ?? {} %}
                        {% set totalPoints = 0 %}
                        {% set hasSwimmingProof = false %}
                        {% set proofValidUntil = null %}
                        
                        {# 1. Vorberechnungen f√ºr diesen Teilnehmer #}
                        {% for resId, resData in epResults %}
                            {% if resData.kategorie|default('')|trim|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                {% set totalPoints = totalPoints + (resData.points|default(0)) %}
                            {% endif %}
                            
                            {% if resData.schwimmnachweis|default(false) and resData.points|default(0) > 0 %}
                                {% set hasSwimmingProof = true %}
                                {# G√ºltigkeit: unter 18 bis zum 18. Geb., √ºber 18 f√ºr 5 Jahre #}
                                {% if p.age_year < 18 %}
                                    {% set birthYear = exam.exam_year - p.age_year %}
                                    {% set proofValidUntil = birthYear + 18 %}
                                {% else %}
                                    {% set proofValidUntil = exam.exam_year + 5 %}
                                {% endif %}
                            {% endif %}
                        {% endfor %}

                        <tr data-ep-id="{{ p.ep_id }}">
                            <td class="name-container">
                                <div class="fw-bold">{{ p.vorname }} {{ p.nachname }}</div>
                                <div class="d-flex gap-1 mt-1">
                                    {# Schwimm-Badge mit Tooltip #}
                                    {% if hasSwimmingProof %}
                                        <span class="badge bg-success badge-result" 
                                            title="Schwimmnachweis vorhanden (G√ºltig bis {{ proofValidUntil }})">
                                            üèä bis {{ proofValidUntil }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-danger badge-result" 
                                            title="Kein g√ºltiger Schwimmnachweis vorhanden oder abgelaufen">
                                            ‚ùå Nachweis fehlt
                                        </span>
                                    {% endif %}

                                    <span class="badge bg-info text-dark badge-result fw-bold" id="total-points-{{ p.ep_id }}">
                                        {{ totalPoints }} Pkt.
                                    </span>
                                </div>
                            </td>
                            <td class="text-center">{{ p.age_year }}</td>

                            {% for category, items in disciplines %}
                                {% if category|trim|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                    {# Disziplinen filtern #}
                                    {% set options = [] %}
                                    {% for d in items %}
                                        {% if d.geschlecht == p.gender and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                            {% set options = options|merge([d]) %}
                                        {% endif %}
                                    {% endfor %}

                                    {# VARIABLEN INITIALISIEREN (Verhindert den 500er Fehler) #}
                                    {% set selectedDiscId = null %}
                                    {% set selectedValue = '' %}
                                    {% set medalClass = 'medal-none' %}
                                    {% set currentReq = null %}

                                    {# Gew√§hlte Disziplin und Leistung bestimmen #}
                                    {% for d in options %}
                                        {% if epResults[d.id] is defined %}
                                            {% set selectedDiscId = d.id %}
                                            {% set currentReq = d %}
                                            {% set selectedValue = epResults[d.id].leistung %}
                                            {% set stufe = epResults[d.id].stufe|default('none')|lower %}
                                            {% if stufe in ['gold', 'silber', 'bronze'] %}
                                                {% set medalClass = 'medal-' ~ stufe %}
                                            {% endif %}
                                        {% endif %}
                                    {% endfor %}

                                    {# Falls nichts gew√§hlt ist, nimm die erste Option als Standard-Vorgabe f√ºr die Anforderungen #}
                                    {% if selectedDiscId is null and options|length > 0 %}
                                        {% set selectedDiscId = options[0].id %}
                                        {% set currentReq = options[0] %}
                                    {% endif %}

                                    <td class="p-1 col-discipline text-center">
                                        <select name="results[{{ p.ep_id }}][{{ category }}][discipline]" 
                                                class="form-select discipline-selector mb-1 {{ medalClass }}" data-save>
                                            <option value="">-</option>
                                            {% for d in options %}
                                                <option value="{{ d.id }}" {% if selectedDiscId == d.id %}selected{% endif %}>{{ d.name }}</option>
                                            {% endfor %}
                                        </select>
                                        
                                        <input type="text" name="results[{{ p.ep_id }}][{{ category }}][leistung]" 
                                            class="form-control form-control-custom fw-bold {{ medalClass }}" 
                                            value="{{ selectedValue }}" placeholder="---" data-save>
                                        
                                        {% if currentReq %}
                                            <div class="req-hint" title="Anforderungen f√ºr {{ currentReq.name }}">
                                                <span style="color: #cd7f32;">{{ currentReq.bronze }}</span>
                                                <span style="color: #777;">{{ currentReq.silber }}</span>
                                                <span style="color: #b8860b;">{{ currentReq.gold }}</span>
                                            </div>
                                        {% endif %}
                                    </td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}