{% extends '@IServCore/page.html.twig' %}

{% block title %}
    Ergebnisse eingeben ‚Äì {{ exam.exam_name }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sportabzeichen_results.css', 'pulsr-sportabzeichen') }}">
{% endblock %}

{% block content %}
<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>üèÖ {{ exam.exam_name }} ({{ exam.exam_year }})</h4>
        <div class="d-flex gap-2">
            {# Klassen-Filter falls vorhanden #}
            {% if classes|length > 0 %}
                <form method="get" class="d-flex gap-2">
                    <select name="class" class="form-select form-select-sm" onchange="this.form.submit()">
                        <option value="">Alle Klassen</option>
                        {% for c in classes %}
                            <option value="{{ c.klasse }}" {{ selectedClass == c.klasse ? 'selected' : '' }}>{{ c.klasse }}</option>
                        {% endfor %}
                    </select>
                </form>
            {% endif %}
            <a href="{{ path('sportabzeichen_results_exams') }}" class="btn btn-outline-secondary btn-sm">Zur√ºck</a>
        </div>
    </div>

    <form id="autosave-form" 
          data-global-route="{{ path('sportabzeichen_results_exam_result_save') }}"
          data-global-token="{{ csrf_token('sportabzeichen_result_save') }}">

        <div class="table-responsive">
            <table class="table table-sm table-bordered table-results-compact">
                <thead>
                    <tr>
                        <th class="col-name">Teilnehmer</th>
                        <th class="col-class text-center">Kl.</th>
                        {# Kategorien-Header (ohne Schwimmen) #}
                        {% for category in disciplines|keys %}
                            {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                <th class="text-center">{{ category }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                {% for p in participants %}
                    {% set epResults = results[p.ep_id] ?? {} %}
                    <tr data-ep-id="{{ p.ep_id }}" id="row-{{ p.ep_id }}" class="medal-row-{{ p.final_medal|lower|default('none') }}">
                        <td class="col-name">
                            <div class="fw-bold">{{ p.vorname }} {{ p.nachname }}</div>
                            <div class="d-flex gap-1 mt-1">
                                <span class="badge {{ p.has_swimming ? 'bg-success' : 'bg-danger' }} badge-mini" 
                                    id="swimming-status-{{ p.ep_id }}">
                                    {{ p.has_swimming ? 'üèä OK' : '‚ùå Schwimmen' }}
                                </span>
                                <span class="badge bg-info text-dark badge-mini" id="total-points-{{ p.ep_id }}">
                                    <span class="pts-val">{{ p.total_points|default(0) }}</span> Pkt.
                                </span>
                            </div>
                        </td>

                        <td class="col-class text-center align-middle fw-bold">{{ p.klasse|default('-') }}</td>

                        {% for category, items in disciplines %}
                            {% if category|upper not in ['SWIMMING', 'SCHWIMMEN'] %}
                                
                                {# 1. Passende Disziplinen f√ºr diesen Teilnehmer filtern #}
                                {% set options = [] %}
                                {% set pGender = (p.geschlecht|slice(0, 1)|upper == 'M') ? 'MALE' : 'FEMALE' %}
                                
                                {% for d in items %}
                                    {% if d.geschlecht == pGender and p.age_year >= d.age_min and p.age_year <= d.age_max %}
                                        {% set options = options|merge([d]) %}
                                    {% endif %}
                                {% endfor %}

                                {# 2. Aktuelle Auswahl bestimmen #}
                                {% set selectedId = null %}
                                {% for d in options %}
                                    {% if epResults[d.id] is defined %}
                                        {% set selectedId = d.id %}
                                    {% endif %}
                                {% endfor %}
                                
                                {# Fallback auf erste Option, falls nichts gew√§hlt #}
                                {% if selectedId is null and options|length > 0 %}
                                    {% set selectedId = options[0].id %}
                                {% endif %}

                                {% set resObj = epResults[selectedId] ?? null %}
                                {% set mClass = (resObj and resObj.stufe|lower in ['gold','silber','bronze']) ? 'medal-' ~ resObj.stufe|lower : 'medal-none' %}

                                <td class="p-1 col-discipline" data-kat-group="{{ category }}">
                                    <select class="form-select discipline-selector mb-1 {{ mClass }}" 
                                            data-save data-ep-id="{{ p.ep_id }}" data-type="discipline" data-kategorie="{{ category }}>
                                        <option value="">--</option>
                                        {% for d in options %}
                                            <option value="{{ d.id }}" {{ selectedId == d.id ? 'selected' : '' }}>
                                                {{ d.name }}
                                            </option>
                                        {% endfor %}
                                    </select>

                                    <input type="text" class="form-control form-control-custom {{ mClass }}"
                                           value="{{ resObj.leistung ?? '' }}"
                                           data-save data-ep-id="{{ p.ep_id }}" data-type="leistung" data-kategorie="{{ category }}">
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/exam_results_autosave.js', 'pulsr-sportabzeichen') }}"></script>
{% endblock %}