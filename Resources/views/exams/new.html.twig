{% extends "@IServCore/page.html.twig" %}

{% block page_title %}
    {{ 'Neue Sportabzeichen-Prüfung anlegen'|trans }}
{% endblock %}

{% block page_content %}
<div class="content">

    <h2>{{ 'Neue Prüfung anlegen'|trans }}</h2>

    {% if message %}
        <div class="alert alert-success">{{ message }}</div>
    {% endif %}
    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <form method="post">

        <div class="form-group">
            <label>Prüfungsjahr</label>
            <input type="number" name="exam_year" class="form-control"
                   value="{{ "now"|date("Y") }}" required>
        </div>

        <div class="form-group">
            <label>Prüfungsdatum</label>
            <input type="date" name="exam_date" class="form-control">
        </div>

        <div class="form-group">
            <label>IServ-Klasse</label>
            <select name="class" class="form-control" required>
                <option value="">-- bitte wählen --</option>
                {% for c in classes %}
                    <option value="{{ c.class }}">{{ c.class }}</option>
                {% endfor %}
            </select>
        </div>

        <button class="btn btn-primary">
            Prüfung anlegen & Teilnehmer zuweisen
        </button>

    </form>

</div>
{% endblock %}
