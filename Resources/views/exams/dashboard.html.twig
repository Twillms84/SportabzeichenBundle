{% extends "@IServCore/page.html.twig" %}

{% block page_title %}
    {{ 'Sportabzeichen – Ergebnisse'|trans }}
{% endblock %}

{% block page_content %}
<div class="content">

    <h2>{{ 'Ergebnisverwaltung'|trans }}</h2>

    {# ------------------------------------------------------------
       FALL 1: Noch keine Prüfungen vorhanden
       ------------------------------------------------------------ #}
    {% if exams is empty %}

        <div class="alert alert-info">
            {{ 'Es sind noch keine Prüfungen angelegt.'|trans }}
        </div>

        <p>
            <a class="btn btn-primary"
               href="{{ path('sportabzeichen_exams_new') }}">
                {{ 'Neue Prüfung anlegen'|trans }}
            </a>
        </p>

    {% else %}

        {# ------------------------------------------------------------
           Prüfung auswählen
           ------------------------------------------------------------ #}
            <form method="get"
                action="{{ path('sportabzeichen_results_index', { examId: 0 }) }}"
                class="form-inline mb-4"
                onsubmit="
                    this.action = this.action.replace('/0', '/' + this.examId.value);
                ">

                <div class="form-group">
                    <label for="examId" class="control-label">
                        {{ 'Prüfung auswählen'|trans }}
                    </label>

                    <select name="examId"
                            id="examId"
                            class="form-control"
                            onchange="this.form.submit()">

                        <option value="">
                            -- {{ 'Bitte wählen'|trans }} --
                        </option>

                        {% for exam in exams %}
                            <option value="{{ exam.id }}">
                                {{ exam.exam_year }}
                                {% if exam.exam_name %}
                                    – {{ exam.exam_name }}
                                {% endif %}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </form>

        {# ------------------------------------------------------------
           FALL 2: Prüfung ausgewählt + Teilnehmer vorhanden
           ------------------------------------------------------------ #}
        {% if selectedExam and participants is not empty %}

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>{{ 'Import-ID'|trans }}</th>
                        <th>{{ 'Geschlecht'|trans }}</th>
                        <th>{{ 'Geburtsdatum'|trans }}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for p in participants %}
                        <tr>
                            <td>{{ p.import_id }}</td>
                            <td>{{ p.geschlecht }}</td>
                            <td>{{ p.geburtsdatum|date('d.m.Y') }}</td>
                            <td class="text-right">
                                <a class="btn btn-primary btn-sm"
                                   href="{{ path(
                                       'sportabzeichen_exam_disciplines',
                                       {
                                           examId: selectedExam,
                                           participantId: p.id
                                       }
                                   ) }}">
                                    {{ 'Disziplinen auswählen'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        {# ------------------------------------------------------------
           FALL 3: Prüfung ausgewählt, aber keine Teilnehmer
           ------------------------------------------------------------ #}
        {% elseif selectedExam %}
            <p class="text-muted">
                {{ 'Keine Teilnehmer für diese Prüfung vorhanden.'|trans }}
            </p>
        {% endif %}

    {% endif %}

</div>
{% endblock %}
