{% extends "@IServCore/page.html.twig" %}

{% block page_title %}
    {{ 'Sportabzeichen – Disziplinen auswählen'|trans }}
{% endblock %}

{% block page_content %}
<div class="content">

    <h2>{{ 'Disziplinen auswählen'|trans }}</h2>

    <p class="text-muted">
        {{ 'Alter im Prüfungsjahr:'|trans }} <strong>{{ age }}</strong>
    </p>

    <form>

        <ul class="nav nav-tabs" role="tablist">
            {% for category, list in categories %}
                <li role="presentation" class="{{ loop.first ? 'active' }}">
                    <a href="#tab-{{ category|lower }}" role="tab" data-toggle="tab">
                        {{ category }}
                    </a>
                </li>
            {% endfor %}
        </ul>

        <div class="tab-content mt-3">
            {% for category, list in categories %}
                <div
                    role="tabpanel"
                    class="tab-pane {{ loop.first ? 'active' }}"
                    id="tab-{{ category|lower }}"
                >
                    {% if list is empty %}
                        <p class="text-muted">
                            {{ 'Keine Disziplinen verfügbar.'|trans }}
                        </p>
                    {% else %}
                        <div class="form-group">
                            <label>
                                {{ 'Disziplin auswählen'|trans }}
                            </label>

                            <select class="form-control">
                                {% for d in list %}
                                    <option>
                                        {{ d.name }}
                                        {% if d.schwimmnachweis %}
                                            ({{ 'Schwimmnachweis erforderlich'|trans }})
                                        {% endif %}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>

    </form>
</div>
{% endblock %}
